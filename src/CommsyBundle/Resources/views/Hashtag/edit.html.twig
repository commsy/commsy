{% extends 'CommsyBundle:Base:room.html.twig' %}

{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-1-1">

            {# new hashtag #}
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'Edit hashtags'|trans({}, "hashtag") }}</div>
                     </div>
                </div>

                <div>
                    <div class="uk-grid">
                        {# form column #}
                        <div class="uk-width-1-3">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>

                        {# show existing hashtags #}
                        <div class="uk-width-2-3">
                            {% for hashtag in hashtags %}
                                <span>
                                     <a class="uk-button uk-margin-small-bottom uk-margin-small-right{% if labelId == hashtag.itemId %} uk-button-primary{% endif %}" href="{{ path('commsy_hashtag_edit', { 'roomId': roomId, 'labelId': hashtag.itemId }) }}">
                                        {{- hashtag.name -}}
                                    </a>
                                </span>
                            {% else %}
                                {{ 'No hashtag has been created yet.'|trans({}, 'hashtag') }}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-panel-box">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'Combine hashtags'|trans({}, "hashtag") }}</div>
                    </div>
                </div>
                <div class="uk-grid">

                    <div class="uk-width-1-3 uk-flex">
                        
                        <select>
                            {% for hashtag in hashtags %}
                            <option value= "{{- hashtag.itemId -}}">{{- hashtag.name -}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="uk-width-1-3 uk-flex">
                        <select>
                            {% for hashtag in hashtags %}
                            <option value="{{- hashtag.itemId -}}">{{- hashtag.name -}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="uk-width-1-3">
                        <button class="uk-button-primary uk-button">
                            {{ 'Combine'|trans({}, 'hashtag') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}