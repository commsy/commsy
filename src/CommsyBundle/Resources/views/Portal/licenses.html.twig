{% extends 'CommsyBundle:Base:portal.html.twig' %}

{% form_theme newEditForm 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block content %}
    <div class="uk-grid" data-uk-grid-margin>

        <div class="uk-width-1-1">

            {# new license #}
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ pageTitle|trans({}, "portal") }}</div>
                    </div>
                </div>

                <div>
                    <div class="uk-grid">
                        {# form column #}
                        <div>
                            {{ form_start(newEditForm) }}
                            <fieldset>
                                <div id="license_new_edit">
                                    {{ form_row(newEditForm.title) }}
                                    {{ form_row(newEditForm.content) }}

                                    <div class="uk-form-row">
                                        <div class="uk-form-controls">
                                            {% if newEditForm.new is defined %}
                                                <button id="license_new_edit_new" class="uk-button uk-button-primary" type="submit" name="license_new_edit[new]">{{ newEditForm.new.vars.label|trans({}, "portal") }}</button>
                                            {% elseif newEditForm.update is defined and newEditForm.cancel is defined %}
                                                <button id="license_new_edit_update" class="uk-button uk-button-primary" type="submit" name="license_new_edit[update]">{{ newEditForm.update.vars.label|trans({}, "portal") }}</button>
                                                <button id="license_new_edit_cancel" class="uk-button uk-button-primary uk-margin-left" type="submit" name="license_new_edit[cancel]">{{ newEditForm.cancel.vars.label|trans({}, "form") }}</button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            {{ form_end(newEditForm) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="uk-width-1-1">
             edit license
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'Edit Licenses'|trans({}, "portal") }}</div>
                    </div>
                </div>

                <div>
                    <div class="uk-grid">
                         form column
                        <div class="uk-width-1-1">
                            {{ form_start(editForm) }}
                            {{ form_widget(editForm) }}
                            {{ form_end(editForm) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}