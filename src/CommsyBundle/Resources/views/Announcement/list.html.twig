{% extends 'CommsyBundle:Base:list.html.twig' %}
{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block feed %}
    <ul id="announcements-feed" class="uk-comment-list" data-uk-observe>
        {{ render(controller(
            'CommsyBundle:Announcement:feed',
            { 'roomId': roomId }
        ))}}
    </ul>

    <div class="feed-load-more" data-uk-scrollspy="{cls: 'uk-animation-fade', repeat: true, topoffset: 500}" data-feed='{"url": "{{ app.request.baseURL }}/room/{{ roomId }}/announcement/feed/", "target": "#announcements-feed"}'>
        <i class="uk-icon-refresh uk-icon-spin uk-icon-medium"></i>
    </div>
{% endblock %}