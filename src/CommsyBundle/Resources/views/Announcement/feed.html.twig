{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for announcement in announcements %}
    <article class="uk-comment">
           
        <div class="cs-comment-change-info {{ macros.statusColor(readerList, announcement.itemId) }}" data-uk-tooltip title="Einzeilige Ã„nderungsinfo(TODO)"></div>
        <header class="uk-comment-header uk-flex">
            <div class="announcements-checkbox uk-margin-right uk-margin-top uk-hidden">

                {% if is_granted('ITEM_EDIT', announcement.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red"></i>
                {% endif %}
                
            </div>
            <div class="uk-margin-right uk-flex-item-none">
                    {% if announcement.creator.isUser %}
                        {{  macros.userIconLink(announcement.creator) }}
                    {% else %}
                        {{  macros.userIcon(announcement.creator) }}
                    {% endif %}
                    <div class="uk-comment-meta">
                        {% if announcement.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                            {{ 'today'|trans({})|capitalize }}, {{announcement.getModificationDate|date("H:i")}}
                        {% else %}
                            {{announcement.getModificationDate|date("d.m.Y")}}
                        {% endif %}
                    </div>
             </div>
            <div>
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_announcement_detail', {'roomId': roomId, 'itemId': announcement.itemId}) }}">{{ announcement.title }}</a>
                </h4>

                <div class="uk-comment-meta">
                    {{ 'by'|trans({})|capitalize }}: {{announcement.creator.fullname}} ({{announcement.getCreationDate|date("d.m.Y")}})
                </div>
               
                <div class="uk-comment-meta">
                    {{  macros.fileListShort(announcement) }}
                </div>
            </div>
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}
