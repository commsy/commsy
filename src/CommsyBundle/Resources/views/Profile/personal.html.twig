{% extends 'CommsyBundle:Base:profile.html.twig' %}

{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block side_navigation %}
    {{ knp_menu_render('account') }}
{% endblock %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-4-4">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'personal'|trans({}, 'menu') }}</div>
                    </div>
                </div>
                {% if hasToChangeEmail == true %}
                    <div class="uk-alert uk-alert-danger">
                        {{ 'has to change mail'|trans({}, 'profile') }}
                    </div>
                {% endif %}
                <div class="uk-margin-left uk-margin-right">
                    {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="uk-panel uk-margin-large-bottom">

                            <table class="uk-table">
                                <tr>
                                    <td>
                                        <h1 class="uk-panel-title">{{ 'account'|trans({},'menu') }}</h1>
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.userId) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.emailAccount) }}</td>
                                </tr>
{#                                 <tr>
                                    <td>{{ form_row(form.currentPassword) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.newPassword) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.newPasswordConfirm) }}</td>
                                </tr> #}
                                <tr>
                                    <td><hr/></td>
                                </tr>
                                <tr>
                                    <td>
                                        <h1 class="uk-panel-title">{{ 'personalData'|trans({},'profile') }}</h1>
                                    </td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.firstname) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.lastname) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.dateOfBirth) }}</td>
                                    <td>{{ form_row(form.dateOfBirthChangeInAllContexts) }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="uk-panel uk-margin-large-bottom">
                            <table class="uk-table">
                                <tr>
                                    <td>{{ form_widget(form.save) }}</td>
                                </tr>
                            </table>
                        </div>
                        {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
