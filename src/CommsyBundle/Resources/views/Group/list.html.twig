{% extends 'CommsyBundle:Base:list.html.twig' %}
{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% import 'CommsyBundle:Utils:macros.html.twig' as utilsMacros %}

{% block feed %}
    <div id="group-feed" class="uk-grid">
        {{ render(controller(
            'CommsyBundle:Group:feed', {
                'roomId': roomId,
                'groupFilter': app.request.query.get('group_filter')
             }
        ))}}
    </div>
    <div class="feed-load-more-grid" data-uk-scrollspy="{repeat: true, cls:'cs-toggle-class'}" data-feed='{"url": "{{ app.request.baseURL }}/room/{{ roomId }}/group/feed/", "target": "#group-feed"}'>
        <i class="uk-icon-refresh uk-icon-spin uk-icon-medium"></i>
        <div class="cs-toggle-class"></div>
    </div>
{% endblock %}

{% block editbox %}
    <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
        <button class="uk-button uk-button-mini">{{ 'selected entries'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
        <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
            <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">

                <li>
                    {% if is_granted('ITEM_EDIT', 'NEW') %}
                        <a href="{{ path('commsy_group_create', {'roomId': roomId}) }}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-plus-circle"></i> {{ 'new'|trans({})}}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-plus-circle"></i> {{ 'new'|trans({})}}
                        </span>
                    {% endif %}
                </li>

                {# print #}
                <li>
                    <a href="{{ path('commsy_group_printlist', {'roomId': roomId}) }}" target="_blank" id="print">
                        <i class="uk-icon-small uk-icon-print uk-icon-justify uk-visible-large"></i> {{ 'print'|trans({})|capitalize }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed", "actionUrl": "{{ path('commsy_group_feedaction', {'roomId': roomId}) }}", "action": "markread"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-check-square-o uk-visible-large"></i> {{ 'mark read'|trans({},'rubric')|capitalize }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target": ".feed", "actionUrl": "{{ path('commsy_group_sendmultiple', {'roomId': roomId}) }}", "action": "sendmail"}'>
                        <i class="uk-icon-justify uk-icon-small uk-icon-send-o uk-visible-large"></i> {{ 'send email'|trans({},'user') }}
                    </a>
                </li>

                <li>
                    {% if (user.isUser and not user.isReadOnlyUser) and not isArchived %}
                        <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed", "actionUrl": "{{ path('commsy_group_feedaction', {'roomId': roomId}) }}", "action": "delete"}' data-confirm-delete="{{ 'confirm delete'|trans({},'rubric')}}" data-confirm-delete-cancel ="{{'confirm delete cancel'|trans({},'rubric')}}" data-confirm-delete-confirm ="{{'confirm delete confirm'|trans({},'rubric')}}" data-no-selection="{{'no entry selected'|trans({},'item')}}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-trash-o uk-visible-large"></i> {{ 'delete'|trans({},'rubric')|capitalize }}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-trash-o uk-visible-large"></i> {{ 'delete'|trans({},'rubric')|capitalize }}
                        </span>
                    {% endif %}
                </li>

            </ul>
        </div>
    </div>
{% endblock %}

{% block sortbox %}
        {# sort dropdown #}
        <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
            <button class="uk-button uk-button-mini cs-button-list">{{ 'list sort'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
            <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
                <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">
                    {# sorting options #}
                    {{ utilsMacros.sortActor('title', 'title', 'rubric', 'title', 'title_rev', '') }}
                    {{ utilsMacros.sortActor('modificator', 'modifier', 'rubric', 'modificator', 'modificator_rev', '') }}
                    {{ utilsMacros.sortActor('date', 'modification_date', 'rubric', 'date_rev', 'date', 'desc') }}
                </ul>
            </div>
        </div>
{% endblock %}
