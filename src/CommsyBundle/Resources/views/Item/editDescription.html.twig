{% form_theme form 'CommsyBundle:Form:uikit_stacked_layout.html.twig' %}
<hr class="uk-width-9-10  cs-detail-divider">
<div class="uk-grid uk-margin-small-bottom">
    <div class="uk-width-9-10">
        <h4 class="cs-detail-section-header">
            <span class="cs-detail-section-header-background">Beschreibung bearbeiten</span>
        </h4>
    </div>
</div>

<div class="uk-margin-left uk-margin-right uk-margin-bottom uk-position-relative uk-padding-remove">
    {% include 'CommsyBundle:Utils:saveSpinner.html.twig' %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="uk-flex">
        <div class="uk-width-9-10">
            {{ form_widget(form.description, {'id': 'descriptionedit' ~ itemId}) }}
        </div>
    </div>
    <div class="uk-flex uk-margin-small-top">
        <div>
            {{ form_row(form.save) }}
        </div>
        <div class="uk-margin-small-left">
            {{ form_row(form.cancel) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>