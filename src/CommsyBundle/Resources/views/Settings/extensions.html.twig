{% extends 'CommsyBundle:Settings:settings.html.twig' %}

{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-3-4">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div>{{ 'Extensions Configuration'|trans({}, 'settings') }}</div>
                    </div>
                </div>

                <div>
                    {{ form_start(form) }}
                        <div class="uk-panel uk-panel-box" style="margin-bottom: 20px;">
                            <h1 class='uk-panel-title'>{{ 'Assessment'|trans({}, 'settings') }}</h1>
                            <div style="margin-bottom: 25px;">{{ 'Assessment text'|trans({}, 'settings') }}</div>
                            {{ form_row(form.assessment) }}
                        </div>

                        <div class="uk-panel uk-panel-box" style="margin-bottom: 20px;">
                            <h1 class='uk-panel-title'>{{ 'Workflow'|trans({}, 'settings') }}</h1> 
                            <div style="margin-bottom: 25px;">{{ 'Workflow text'|trans({}, 'settings') }}</div>
                            {{ form_widget(form.workflow) }}
                        </div>

                        <div class="uk-panel uk-panel-box" style="margin-bottom: 20px;">
                            <h1 class='uk-panel-title'>{{ 'wiki'|trans({}, 'settings') }}</h1> 
                            <div style="margin-bottom: 25px;">{{ 'wiki text'|trans({}, 'settings') }}</div>
                            {{ form_row(form.wikiEnabled) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
        <div class="uk-width-medium-1-4">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div>{{ 'Information'|trans({}, 'settings') }}</div>
                    </div>
                </div>

                <div>
                    {{ 'Useful information'|trans({}, 'settings') }}
                </div>
            </div>

        </div>
    </div>
{% endblock content %}