{% extends 'CommsyBundle:Base:list.html.twig' %}

{% import 'CommsyBundle:Utils:macros.html.twig' as utilsMacros %}

{% block feed %}
    <ul id="todos-feed" class="uk-comment-list" data-uk-observe>
        {{ render(controller(
            'CommsyBundle:Todo:feed', {
                'roomId': roomId,
                'todoFilter': app.request.query.get('todo_filter')
            }
        ))}}
    </ul>

    <div class="feed-load-more" data-uk-scrollspy="{repeat: true, cls:'cs-toggle-class'}" data-feed='{"url": "{{ app.request.baseURL }}/room/{{ roomId }}/todo/feed/", "target": "#todos-feed"}'>
        <i class="uk-icon-refresh uk-icon-spin uk-icon-medium"></i>
        <div class="cs-toggle-class"></div>
    </div>
{% endblock %}

{% block sortbox %}
        {# sort dropdown #}
        <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
            <button class="uk-button uk-button-mini cs-button-list">{{ 'list sort'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
            <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
                <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">
                    {# sorting options #}
                    {{ utilsMacros.sortActor('title', 'title', 'rubric', 'title', 'title_rev', '') }}
                    {{ utilsMacros.sortActor('creator', 'creator', 'rubric', 'creator', 'creator_rev', '') }}
                    {{ utilsMacros.sortActor('modificator', 'modifier', 'rubric', 'modificator', 'modificator_rev', '') }}
                    {{ utilsMacros.sortActor('date', 'modification_date', 'rubric', 'date_rev', 'date', '') }}
                    {{ utilsMacros.sortActor('duedate', 'due date', 'todo', 'duedate_rev', 'duedate', 'asc') }}
                    {{ utilsMacros.sortActor('status', 'status', 'todo', 'status', 'status_rev', '') }}
               </ul>
            </div>
        </div>
{% endblock %}

{% block editbox %}
    <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
        <button class="uk-button uk-button-mini cs-button-list">{{ 'selected entries'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
        <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
            <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">

                <li>
                    {% if is_granted('ITEM_EDIT', 'NEW') %}
                        <a href="{{ path('commsy_todo_create', {'roomId': roomId}) }}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-plus-circle"></i> {{ 'new'|trans({})}}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-plus-circle"></i> {{ 'new'|trans({})}}
                        </span>
                    {% endif %}
                </li>

                <li>
                    <a href="{{ path('commsy_todo_printlist', {'roomId': roomId}) }}" target="_blank" id="print">
                        <i class="uk-icon-small uk-icon-print uk-icon-justify uk-visible-large"></i> {{ 'print'|trans({})|capitalize }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "markread"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-check-square-o uk-visible-large"></i> {{ 'mark read'|trans({},'rubric')|capitalize }}
                    </a>
                </li>


                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "copy"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-copy uk-visible-large"></i> {{ 'copy'|trans({},'rubric')|capitalize }}
                    </a>
                </li>


                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "save"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-save uk-visible-large"></i> {{ 'save'|trans({},'rubric')|capitalize }}
                    </a>
                </li>


                <li>
                    {% if (user.isUser and not user.isReadOnlyUser) and not isArchived %}
                        <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "delete"}' data-confirm-delete="{{ 'confirm delete'|trans({},'rubric')}}" data-confirm-delete-cancel ="{{'confirm delete cancel'|trans({},'rubric')}}" data-confirm-delete-confirm ="{{'confirm delete confirm'|trans({},'rubric')}}" data-no-selection="{{'no entry selected'|trans({},'item')}}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-trash-o uk-visible-large"></i> {{ 'delete'|trans({},'rubric')|capitalize }}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-trash-o uk-visible-large"></i> {{ 'delete'|trans({},'rubric')|capitalize }}
                        </span>
                    {% endif %}
                </li>


                <li>
                    {% if (user.isUser and not user.isReadOnlyUser) and not isArchived %}
                        <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "markpending"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-circle-o uk-visible-large"></i> {{ 'markpending'|trans({},'rubric') }}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-circle-o uk-visible-large"></i> {{ 'markpending'|trans({},'rubric') }}
                        </span>
                    {% endif %}
                </li>


                <li>
                    {% if (user.isUser and not user.isReadOnlyUser) and not isArchived %}
                        <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "markinprogress"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-dot-circle-o uk-visible-large"></i> {{ 'markinprogress'|trans({},'rubric') }}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-dot-circle-o uk-visible-large"></i> {{ 'markinprogress'|trans({},'rubric') }}
                        </span>
                    {% endif %}
                </li>


                <li>
                    {% if (user.isUser and not user.isReadOnlyUser) and not isArchived %}
                        <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "markdone"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                            <i class="uk-icon-justify uk-icon-small uk-icon-check-circle-o uk-visible-large"></i> {{ 'markdone'|trans({},'rubric') }}
                        </a>
                    {% else %}
                        <span class="uk-text-muted">
                            <i class="uk-icon-justify uk-icon-small uk-icon-check-circle-o uk-visible-large"></i> {{ 'markdone'|trans({},'rubric') }}
                        </span>
                    {% endif %}
                </li>

                {% for status in statusList %}
                    <li>
                        {% if (user.isUser and not user.isReadOnlyUser) and not isArchived %}
                            <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_todo_feedaction', {'roomId': roomId}) }}", "action": "mark{{ status }}"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                                <i class="uk-icon-justify uk-icon-small uk-icon-circle uk-visible-large"></i> {{ 'marktodostatus'|trans({'%status%': status}, 'rubric') }}
                            </a>
                        {% else %}
                            <span class="uk-text-muted">
                                <i class="uk-icon-justify uk-icon-small uk-icon-circle uk-visible-large"></i> {{ 'marktodostatus'|trans({'%status%': status}, 'rubric') }}
                            </span>
                        {% endif %}
                    </li>
                {% endfor %}

            </ul>
        </div>
    </div>
{% endblock%}
