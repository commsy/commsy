{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}
{% import 'CommsyBundle:Todo:macros.html.twig' as macrosTodo %}
{% import 'CommsyBundle:Item:macros.html.twig' as macrosItem %}

<div class="uk-panel uk-panel-box uk-margin-top">
    <article class="uk-article uk-position-relative">
        {# title #}
        <div class="cs-toggle" data-uk-observe>
            <div class="uk-form-horizontal">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="uk-flex">
                    <div id="remove-on-click" class="uk-width-9-10">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="uk-margin-small-top">
                    <div class="uk-form-row">
                        {{ form_label(form.time_spend) }}
                        {{ form_widget(form.time_spend) }}
                    </div>
                </div>
                <div class="uk-flex uk-margin-small-top">
                    <div class="uk-margin-small-left">
                        {{ form_row(form.save) }}
                    </div>
                    <div class="uk-margin-small-left">
                        {{ form_row(form.cancel) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
        
        {# description #}
        <div class="cs-edit-step cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_item_editdescription', {'roomId': step.contextId, 'itemId': step.itemId}) }}' }">
            {{ macrosItem.itemDescription('description', step, true, step.description) }}
        </div>

        {# files #}
        <div class="cs-edit-step cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_upload_uploadform', {'roomId': step.contextId, 'itemId': step.itemId}) }}' }">
            {{ macrosItem.files(step) }}
        </div>
    </article>
</div>