{% extends 'CommsyBundle:Base:room.html.twig' %}

{% form_theme editForm 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block content %}
    <div class="uk-grid" data-uk-grid-margin>

        <div class="uk-width-1-1">

            {# new hashtag #}
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'Edit hashtags'|trans({}, "hashtag") }}</div>
                     </div>
                </div>

                <div>
                    <div class="uk-grid">
                        {# form column #}
                        <div class="uk-width-1-3">
                            {{ form_start(editForm) }}
                            {{ form_widget(editForm) }}
                            {{ form_end(editForm) }}
                        </div>

                        {# show existing hashtags #}
                        <div class="uk-width-2-3">
                            {% for calendar in calendars %}
                                <span>
                                     <a class="uk-button uk-margin-small-bottom uk-margin-small-right{% if calendarId == calendar.id %} uk-button-primary{% endif %}" href="{{ path('commsy_calendar_edit', { 'roomId': roomId, 'calendarId': calendar.id }) }}">
                                        {{- calendar.title -}}
                                    </a>
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}