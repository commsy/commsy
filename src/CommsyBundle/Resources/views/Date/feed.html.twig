{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for date in dates %}
    {% set entryAllowedActions = '' %}
    {% if allowedActions[date.itemId] is defined %}
        {% set entryAllowedActions = allowedActions[date.itemId] %}
    {% endif %}
    <article class="uk-comment" data-allowed-actions="{{ entryAllowedActions|json_encode() }}">
           
            {{ macros.statusColor(readerList, date.itemId) }}
        <header class="uk-comment-header uk-flex">
            <div class="items-checkbox uk-margin-right uk-margin-top uk-hidden">

                {% if is_granted('ITEM_EDIT', date.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox" value="{{ date.itemId }}">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red" data-itemid="{{ date.itemId }}"></i>
                {% endif %}
                
            </div>
            <div class="uk-margin-right uk-flex-item-none">
                    {% if date.creator.isUser %}
                        {{  macros.userIconLink(date.creator) }}
                    {% else %}
                        {{  macros.userIcon(date.creator) }}
                    {% endif %}
                    <div class="uk-comment-meta">
                        {% if date.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                            {{ 'today'|trans({})|capitalize }}, {{date.getModificationDate|date("H:i")}}
                        {% else %}
                            {{date.getModificationDate|date("d.m.Y")}}
                        {% endif %}
                    </div>
            </div>
            <div>
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_date_detail', {'roomId': roomId, 'itemId': date.itemId}) }}">{{ date.title }}</a>
                </h4>

                <div class="uk-comment-meta">{{date.getDateListDescription}}{% if date.getPlace != '' %}, {{date.getPlace}}{% endif %}</div>
                
                <div class="uk-comment-meta">
                    {{  macros.fileListShort(date) }}
                </div>
            </div>
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}
