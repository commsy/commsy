{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for date in dates %}
    <article class="uk-comment">
        <i class="{{ macros.iconClassForItemType(date.itemType) }} uk-icon-small {{ macros.statusColor(readerList, date.itemId) }}"></i>
        <header class="uk-comment-header uk-flex">
            <div class="dates-checkbox uk-margin-right uk-margin-top uk-hidden">

                {% if is_granted('ITEM_EDIT', date.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red"></i>
                {% endif %}
                
            </div>
            <div class="uk-margin-right uk-flex-item-none">
                <a href="{{ path('commsy_user_detail', {'roomId': roomId, 'itemId': date.creatorId}) }}">
                    <img class="uk-comment-avatar uk-thumbnail uk-border-circle" style="height:60px; width:60px;" src="{{ app.request.baseURL }}/room/{{ app.request.attributes.get('roomId') }}/user/{{ date.creatorID }}/image" data-uk-tooltip title="{{ date.creator.fullname }}">
                </a>
            </div>
            <div>
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_date_detail', {'roomId': roomId, 'itemId': date.itemId}) }}">{{ date.title }}</a>
                </h4>

                <div class="uk-comment-meta">
                    {{date.dateDescription}}
                </div>

                <div class="uk-comment-meta">
                    {{ 'by'|trans({})|capitalize }}: {{date.creator.getFullName}}
                </div>

                <div class="uk-comment-meta">
                    {{ 'last changed'|trans({})|capitalize }}: {{date.getModificationDate|date("d.m.Y H:i")}}
                </div>
                
                <div class="uk-comment-meta">
                    {{  macros.fileListShort(date) }}
                </div>
            </div>
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}
