{#% extends 'CommsyBundle:Base:detail.html.twig' %}

{% set item = date %}

{% block content_left_column %}
    <div class="uk-panel">
        <div class="uk-panel-badge"><i class="{{ macros.iconClassForItemType(date.itemType) }} uk-icon-small {{ macros.statusColor(readerList, date.itemId) }}"></i></div>
        <h3 class="uk-panel-title">{{ date.title|raw }}</h3>
        {{ macros.detailInformation(date, modifierList) }}
    </div>
    
    <div class="uk-panel uk-margin-left uk-margin-bottom">
        {{ 'date'|trans({})|capitalize }}: {{ date.dateDescription }}
    </div>
    
    <div class="uk-panel uk-margin-left uk-margin-bottom">
        {{ 'place'|trans({})|capitalize }}: {{ date.place }}
    </div>
    
    <div class="uk-panel uk-margin-left uk-margin-bottom">
        {{ 'participants'|trans({})|capitalize }}:
        {% for participant in date.participantsItemList.to_array %}
            <a href="{{ path('commsy_user_detail', {'roomId': roomId, 'itemId': participant.itemId}) }}">
                {{ participant.fullname }}
            </a>
        {% endfor %}
    </div>
    
    <div class="uk-panel uk-margin-left uk-margin-bottom">
        {{ date.description|raw }}
    </div>
    
    <div class="uk-panel uk-margin-left uk-margin-bottom">
        {{  macros.fileList(date) }}
    </div>
{% endblock %}

{% block content_right_column %}
    <div class="uk-panel uk-panel-box uk-panel-box-primary">
        <div class="uk-panel-teaser cs-panel-teaser-primary">
            <div class="uk-clearfix">
                <div class="uk-float-right">
                    <a href="#" class="button-toggle uk-button-mini uk-button-primary" data-uk-toggle="{target: '#user-main', animation: 'uk-animation-fade'}">
                        <i class="uk-icon-chevron-up"></i>
                    </a>
                </div>
                <div class="uk-float-left">
                    {{ '...'|trans({}, "room") }}
                </div>
            </div>
        </div>
        
        <div id="user-main" class="uk-overflow-container">
            <div class="">
                ...
            </div>
        </div>
    </div>
{% endblock %#}

{% extends 'CommsyBundle:Base:room.html.twig' %}

{% import 'CommsyBundle:Item:macros.html.twig' as macrosItem %}
{% import 'CommsyBundle:Material:macros.html.twig' as macrosMaterial %}
{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% set item = date %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-4-5">

            {# material content panel #}
            <div class="uk-panel uk-panel-box uk-panel-box-primary">

                {# panel teaser #}
                <div class="uk-panel-teaser cs-panel-teaser-primary cs-remove-overflow">
                    <div class="uk-grid">

                        {# quick item navigation #}
                        {{ render(controller(
                            'CommsyBundle:Item:stepper',
                            { 'roomId': roomId, 'itemId': item.itemId }
                        ))}}

                        {# actions #}
                        <div class="uk-width-3-5 uk-text-right">

                            {# additional actions #}
                            <div class="uk-margin-left uk-button-dropdown" data-uk-dropdown>
                                <button class="uk-button uk-button-mini">
                                    {{ 'selected entries'|trans({}, 'rubric') }}
                                    <i class="uk-icon-caret-down"></i>
                                </button>

                                <div id="cs-additional-actions" class="uk-dropdown uk-padding-remove">
                                    <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">

                                        {# new entry #}
                                        <li>
                                            <a href="{{ path('commsy_date_create', {'roomId': roomId, 'dateDescription' : "now"|date("U") }) }}" id="newEntry">
                                                <i class="uk-icon-small uk-icon-plus-circle uk-icon-justify uk-visible-large"></i> {{ 'new'|trans({}) }}
                                            </a>
                                        </li>

                                        {# print #}
                                        <li>
                                            <a href="{{ path('commsy_date_print', {'roomId': roomId, 'itemId': date.itemId}) }}" target="_blank" id="print">
                                                <i class="uk-icon-small uk-icon-print uk-icon-justify uk-visible-large"></i> {{ 'print'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# save #}
                                        <li>
                                            <a href="{{ path('commsy_date_download', {'roomId': roomId, 'itemId': date.itemId}) }}" target="_blank">
                                                <i class="uk-icon-small uk-icon-save uk-icon-justify uk-visible-large"></i> {{ 'save'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# copy #}
                                        <li>
                                            <a href="#" data-cs-action-copy="{
                                                'url': '{{ path('commsy_item_copy', {'roomId': roomId}) }}',
                                                'successMessage': '<i class=\'uk-icon-medium uk-icon-copy\'></i> {{ 'Entry stored in clipboard|%count% entries stored in clipboard'|transchoice(1, {}, 'item') }}',
                                                'errorMessage': '<i class=\'uk-icon-medium uk-icon-info\'></i> {{ 'action error'|trans }}',
                                                'itemIds': [ {{ date.itemId}} ]
                                            }">
                                                <i class="uk-icon-small uk-icon-copy uk-icon-justify uk-visible-large"></i> {{ 'copy'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# send #}
                                        <li>
                                            <a href="#" data-cs-action-send="{
                                                'url': '{{ path('commsy_item_send', {'roomId': roomId}) }}',
                                                'errorMessage': '<i class=\'uk-icon-medium uk-icon-info\'></i> {{ 'action error'|trans }}',
                                                'itemId': {{ date.itemId }}
                                            }">
                                                <i class="uk-icon-small uk-icon-send-o uk-icon-justify uk-visible-large"></i> {{ 'send'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# delete #}
                                        <li>
                                            {% if is_granted('ITEM_EDIT', item.itemId) %}
                                                <a class="commsy-action-delete" id="" href="#" data-delete-url="{{ path('commsy_date_delete', {'roomId': roomId, 'itemId': date.itemId}) }}" data-item-type="{{date.itemType}}" data-title="{{ 'list choice'|trans({},'rubric')|capitalize }}" data-confirm-delete="{{ 'confirm delete'|trans({},'rubric')}}" data-confirm-delete-cancel ="{{'confirm delete cancel'|trans({},'rubric')}}" data-confirm-delete-confirm ="{{'confirm delete confirm'|trans({},'rubric')}}" data-return-url="{{ path('commsy_date_list', {'roomId': roomId}) }}">
                                                    <i class="uk-icon-small uk-icon-trash-o uk-icon-justify uk-visible-large"></i> {{ 'trash'|trans({})|capitalize }}
                                                </a>
                                            {% else %}
                                                <i class="uk-icon-small uk-icon-trash-o uk-icon-justify uk-visible-large"></i> {{ 'trash'|trans({})|capitalize }}
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            {# annotations #}
            {% if item.itemType != 'discussion' %}
                <div class="uk-panel-teaser cs-panel-teaser-primary uk-margin-bottom-remove uk-margin-top">
                    <div class="uk-grid">
                        <div class="uk-width-3-5 uk-text-large ">
                            {{ 'annotations'|trans({})|capitalize }}
                        </div>
                    </div>
                </div>              
                
                <div id="annotations{{ date.itemId }}" class="uk-panel uk-panel-box uk-margin-bottom uk-panel-box-primary ">

                    <article class="uk-comment">
                        <header class="uk-comment-header uk-flex">
                            <div class="uk-margin-right uk-flex-item-none">
                                {{  macros.userIconLink(user) }}
                            </div>
                            <div class="uk-width-8-10">
                                {{ form_start(annotationForm, {'action': path('commsy_annotation_create', {'roomId': date.contextId, 'itemId': date.itemId}), 'method': 'POST'}) }}
                                {{ form_widget(annotationForm) }}
                                {{ form_end(annotationForm) }}
                            </div>                            
                        </header>
                    </article>

                    {{ render(controller(
                        'CommsyBundle:Annotation:feed',
                        { 'roomId': roomId, 'linkedItemId': item.itemId }
                    ))}}

                </div>

            {% endif %}
        </div>
    </div>
{% endblock %}

{# end #}