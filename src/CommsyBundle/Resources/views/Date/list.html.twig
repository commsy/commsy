{% extends 'CommsyBundle:Base:list.html.twig' %}
{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block feed %}
    <ul id="dates-feed" class="uk-comment-list" data-uk-observe>
        {{ render(controller(
            'CommsyBundle:Date:feed', {
                'roomId': roomId,
                'dateFilter': app.request.query.get('date_filter')
            }
        ))}}
    </ul>

    <div class="feed-load-more" data-uk-scrollspy="{repeat: true, cls:'cs-toggle-class'}" data-feed='{"url": "{{ app.request.baseURL }}/room/{{ roomId }}/date/feed/", "target": "#dates-feed"}'>
        <i class="uk-icon-refresh uk-icon-spin uk-icon-medium"></i>
        <div class="cs-toggle-class"></div>
    </div>
{% endblock %}

{% block sortbox %}
        {# sort dropdown #}
        <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
            <button class="uk-button uk-button-mini cs-button-list">{{ 'list sort'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
            <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
                <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">
                    <li><a href="#" id="commsy-sort-title" class="uk-clearfix"><span class="uk-float-left">{{ 'title'|trans({},'rubric')}}</span><span class="uk-float-right"><i id="commsy-sort-title-chevron" class=""></i></span></a></li>
                    <li><a href="#" id="commsy-sort-date" class="cs-sort-active uk-clearfix"><span class="uk-float-left">{{ 'time'|trans({},'rubric') }}</span><span class="uk-float-right"><i id="commsy-sort-date-chevron" class="uk-icon-chevron-down"></i></span></a></li>
                    <li><a href="#" id="commsy-sort-place" class="uk-clearfix"><span class="uk-float-left">{{ 'place'|trans({},'rubric') }}</span><span class="uk-float-right"><i id="commsy-sort-place-chevron" class=""></i></span></a></li>
               </ul>
            </div>
        </div>
{% endblock %}

{% block editbox %}
    <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
        <button class="uk-button uk-button-mini cs-button-list">{{ 'selected entries'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
        <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
            <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">

                {% if is_granted('ITEM_EDIT', 'NEW') %}
                <li>
                     <a href="{{ path('commsy_date_create', {'roomId': roomId, 'dateDescription' : "now"}) }}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-plus-circle"></i> {{ 'new'|trans({})}}
                    </a>
                </li>
                {% endif %}

                {# print #}
                <li>
                    <a href="{{ path('commsy_date_printlist', {'roomId': roomId,'date_filter':app.request.query.get('date_filter')}) }}" target="_blank" id="print">
                        <i class="uk-icon-small uk-icon-print uk-icon-justify uk-visible-large"></i> {{ 'print'|trans({})|capitalize }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_date_feedaction', {'roomId': roomId}) }}", "action": "markread"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-check-square-o uk-visible-large"></i> {{ 'mark read'|trans({},'rubric')|capitalize }}
                    </a>
                </li>


                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_date_feedaction', {'roomId': roomId}) }}", "action": "copy"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-copy uk-visible-large"></i> {{ 'copy'|trans({},'rubric')|capitalize }}
                    </a>
                </li>


                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_date_feedaction', {'roomId': roomId}) }}", "action": "save"}' data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-save uk-visible-large"></i> {{ 'save'|trans({},'rubric')|capitalize }}
                    </a>
                </li>


                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('commsy_date_feedaction', {'roomId': roomId}) }}", "action": "delete"}' data-confirm-delete="{{ 'confirm delete'|trans({},'rubric')}}" data-confirm-delete-cancel ="{{'confirm delete cancel'|trans({},'rubric')}}" data-confirm-delete-confirm ="{{'confirm delete confirm'|trans({},'rubric')}}" data-no-selection="{{'no entry selected'|trans({},'item')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-trash-o uk-visible-large"></i> {{ 'delete'|trans({},'rubric')|capitalize }}
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endblock%}

{% block listAddons %}
    <div class="uk-float-right uk-margin-small-left">
        <a href="{{ path('commsy_date_calendar', {'roomId': roomId}) }}" class="uk-text-contrast"><i class="uk-icon-calendar uk-icon-small cs-icon-mute" data-uk-tooltip title="{{ 'calendar view'|trans({}, "date") }}"></i></a>
    </div>
    <div class="uk-float-right uk-margin-small-left">
        <i class="uk-icon-list-ul uk-icon-small" data-uk-tooltip title="{{ 'list view'|trans({}, "date") }}"></i>
    </div>
{% endblock %}