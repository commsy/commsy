{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for topic in topics %}
   <article class="uk-comment">
    
        {# item change information #}
            {{ macros.statusColor(readerList, topic.itemId) }}
 
        <header class="uk-comment-header uk-flex">
            <div class="items-checkbox uk-margin-right uk-margin-top uk-hidden">
                {% if is_granted('ITEM_EDIT', topic.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox" value="{{ topic.itemId }}">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red"></i>
                {% endif %}
            </div>

            {# user icon and modification time #}
            <div class="uk-margin-right uk-flex-item-none">
                {% if topic.modificatorItem.isUser %}
                    {{  macros.userIconLink(topic.modificatorItem) }}
                {% else %}
                    {{  macros.userIcon(topic.modificatorItem) }}
                {% endif %}
                <div class="uk-comment-meta">
                    {% if topic.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                        {{ 'today'|trans({})|capitalize }}, {{topic.getModificationDate|date("H:i")}}
                    {% else %}
                        {{topic.getModificationDate|date("d.m.Y")}}
                    {% endif %}
                </div>
            </div>

            {# title and meta #}
            <div class="uk-width-8-10">
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': topic.itemId}) }}">{{ topic.title }}</a>
                </h4>

                <div class="uk-comment-meta">
                        {{'links'|trans({}) }}: {{topic.getCountAllLinkItemList}}              
                 </div>
            </div>
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}




