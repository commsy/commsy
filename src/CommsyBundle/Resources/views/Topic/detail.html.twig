{% extends 'CommsyBundle:Base:room.html.twig' %}

{% import 'CommsyBundle:Item:macros.html.twig' as macrosItem %}
{% import 'CommsyBundle:Topic:macros.html.twig' as macrosTopic %}
{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% set item = topic %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-4-5">

            {# topic content panel #}
            <div class="uk-panel uk-panel-box uk-panel-box-primary">

                {# panel teaser #}
                <div class="uk-panel-teaser cs-panel-teaser-primary cs-remove-overflow">
                    <div class="uk-grid">

                        {# quick item navigation #}
                        <div class="uk-flex-inline uk-width-2-5 ">

                            {# back navigation #}
                            <div class="uk-margin-right">
                                {% if firstItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': firstItemId}) }}"><i class="uk-icon-small uk-icon-angle-double-left"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-double-left uk-button-primary"></i>
                                {% endif %}
                                {% if prevItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': prevItemId}) }}"><i class="uk-icon-small uk-icon-angle-left"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-left uk-button-primary"></i>
                                {% endif %}
                            </div>

                            {# item dropdown #}
                            <div class="uk-button-dropdown uk-margin-right" data-uk-dropdown>
                                <button class="uk-button uk-button-mini">
                                    {{ 'Topic'|transchoice(0, {}, "rubric")}} {{ counterPosition }} / {{ count }}
                                    <i class="uk-icon-caret-down"></i>
                                </button>
                                <div id="cs-entry-navigation" class="uk-dropdown uk-padding-remove">
                                   <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">
                                       {% for tempTopic in topicList %}
                                            {% if tempTopic.itemId != topic.itemId %}
                                                <li><a href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': tempTopic.itemId}) }}" data-uk-tooltip="{delay:'250'}" title="{{ tempTopic.title|raw }}">{{ tempTopic.title|raw|truncate(25) }}</a></li>
                                            {% else %}
                                                <li><a href="#" data-uk-tooltip="{delay:'250'}" title="{{ tempTopic.title|raw }}" class="uk-text-muted">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ tempTopic.title|raw|truncate(20)  }}</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>

                            {# forward navigation #}
                            <div>
                                {% if nextItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': nextItemId}) }}"><i class="uk-icon-small uk-icon-angle-right"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-right uk-button-primary"></i>
                                {% endif %}
                                {% if lastItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': lastItemId}) }}"><i class="uk-icon-small uk-icon-angle-double-right"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-double-right uk-button-primary"></i>
                                {% endif %}
                            </div>
                        </div>

                        {# actions #}
                        <div class="uk-width-3-5 uk-text-right">


                            {# additional actions #}
                            <div class="uk-margin-left uk-button-dropdown" data-uk-dropdown>
                                <button class="uk-button uk-button-mini">
                                    {{ 'selected entries'|trans({}, 'rubric') }}
                                    <i class="uk-icon-caret-down"></i>
                                </button>

                                <div id="cs-additional-actions" class="uk-dropdown  uk-padding-remove">
                                    <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">

                                        {# new entry #}
                                        <li>
                                            <a class="" href="{{ path('commsy_topic_create', {'roomId': roomId}) }}" id="newEntry">
                                                <i class="uk-icon-small uk-icon-plus-circle uk-icon-justify uk-visible-large"></i> {{ 'new'|trans({}) }}
                                            </a>
                                        </li>
                                        {# print #}
 
                                        <li>
                                            <a class="" href="{{ path('commsy_topic_print', {'roomId': roomId, 'itemId': topic.itemId}) }}" target="_blank" id="print">
                                                <i class="uk-icon-small uk-icon-print uk-icon-justify uk-visible-large"></i> {{ 'print'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# save #}
                                        <li>
                                            <a class="" href="{{ path('commsy_item_download', {'roomId': roomId, 'itemId': topic.itemId}) }}" download>
                                                <i class="uk-icon-small uk-icon-save uk-icon-justify uk-visible-large"></i> {{ 'save'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# copy #}
                                        <li>
                                            <a href="#" data-cs-action-copy="{
                                                'url': '{{ path('commsy_item_copy', {'roomId': roomId}) }}',
                                                'successMessage': '<i class=\'uk-icon-medium uk-icon-copy\'></i> {{ 'Entry stored in clipboard|%count% entries stored in clipboard'|transchoice(1, {}, 'item') }}',
                                                'errorMessage': '<i class=\'uk-icon-medium uk-icon-info\'></i> {{ 'action error'|trans }}',
                                                'itemIds': [ {{ topic.itemId}} ]
                                            }">
                                                <i class="uk-icon-small uk-icon-copy uk-icon-justify uk-visible-large"></i> {{ 'copy'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# send #}
                                        <li>
                                            <a href="{{ path('commsy_item_send', {'roomId': roomId, 'itemId': topic.itemId}) }}">
                                                <i class="uk-icon-small uk-icon-send-o uk-icon-justify uk-visible-large"></i> {{ 'send'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# delete #}
                                        <li>
                                            {% if is_granted('ITEM_EDIT', item.itemId) %}
                                                <a class="commsy-action-delete" id="" href="#" data-delete-url="{{ path('commsy_item_delete', {'roomId': roomId, 'itemId': topic.itemId}) }}" data-item-type="{{topic.itemType}}" data-title="{{ 'list choice'|trans({},'rubric')|capitalize }}" data-confirm-delete="{{ 'confirm delete'|trans({},'rubric')}}" data-confirm-delete-cancel ="{{'confirm delete cancel'|trans({},'rubric')}}" data-confirm-delete-confirm ="{{'confirm delete confirm'|trans({},'rubric')}}" data-return-url="{{ path('commsy_topic_list', {'roomId': roomId}) }}">
                                                    <i class="uk-icon-small uk-icon-trash-o uk-icon-justify uk-visible-large"></i> {{ 'trash'|trans({})|capitalize }}
                                                </a>
                                            {% else %}
                                                <i class="uk-icon-small uk-icon-trash-o uk-icon-justify uk-visible-large"></i> {{ 'trash'|trans({})|capitalize }}
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                
                {# content #}
                <article class="uk-article uk-position-relative" data-uk-observe>
                    {# title, etc. #}
                    <div class="cs-toggle" data-uk-observe>
                        {{ macrosTopic.title(topic, modifierList, userCount, readCount, readSinceModificationCount, draft, showRating) }}
                    </div>
            
                    {# description #}
                    <div id="description{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_item_editdescription', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                        {{ macrosItem.itemDescription('description', topic, true, topic.description) }}
                    </div>
            
                    {# files #}
                    <div id="files{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_upload_uploadform', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                        {{ macrosItem.files(topic) }}
                    </div>
        
            
                    {# path #}
                    <div id="path{{ topic.itemId }}" class="cs-toggle" data-uk-observe>
                       <hr class="uk-width-9-10"/>
                        <article class="uk-article uk-margin-left uk-margin-right">
                            <a name="topicpath"></a>
                            {# title row #}
                            <div class="uk-grid uk-margin-small-bottom">
                                <div class="uk-width-9-10">
                                    <h4 class="cs-detail-section-header">
                                        TODO: {{'topic path'|trans({}) }} 
                                    </h4>
                                </div>
                            </div>
                            <div class="uk-width-9-10 uk-margin-remove uk-padding-remove">
                                ToDo: Path
                            </div>
 
                        </article>
                    </div>

                    {# links #}
                    <div id="links{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_item_editlinks', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                        {{ macrosItem.links(topic,showHashtags,showCategories) }}
                    </div>
        
                </article>
            </div>
                    </div>

        <div class="uk-width-medium-1-5 cs-addon-navigation">

            {# quick navigation #}
            <div class="uk-panel uk-panel-box uk-padding-remove uk-panel-box-primary" data-uk-sticky>
                <div class="uk-panel-teaser uk-text-large cs-panel-teaser-primary uk-margin-remove">
                    {{ 'quick navigation'|trans({})|capitalize }}
                </div>
                <div id="cs-nav-quick" class="cs-nav-quick">
                    <ul class="uk-list uk-list-striped uk-padding-remove uk-nav uk-nav-side uk-nav-parent-icon" data-uk-nav="{toggle: '>li.uk-parent > a[href=\'#sections{{ topic.itemId }}\']'}" data-uk-scrollspy-nav="{closest: 'li', smoothscroll: true}">
                        <li><a href="#description{{ topic.itemId }}">{{ 'entry description'|trans({})}}</a></li>
                        <li><a href="#topicpath{{ topic.itemId }}">{{ 'topic path'|trans({})}}</a></li>
                        <li><a href="#links{{ topic.itemId }}">{{ 'links'|trans({})}}</a></li>
                     </ul>
                </div>
            </div>

        </div>
      
    </div>
{% endblock %}

{# end #}
