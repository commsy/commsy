{% extends 'CommsyBundle:Base:room.html.twig' %}

{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% form_theme form 'CommsyBundle:Form:uikit_horizontal_layout.html.twig' %}

{% block content %}
    <div class="uk-grid">
        <div class="uk-width-medium-2-3">
            <div class="uk-panel uk-panel-box uk-margin-bottom">
                {# panel title bar #}
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div>{{ 'edit category'|trans({}, 'portfolio') }}</div>
                    </div>
                </div>

                <div class="uk-form-horizontal">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="uk-flex">
                        <div class="uk-width-9-10">
                            {{ form_widget(form.category) }}
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                    <div class="uk-margin-top">
                        <div class="uk-form-row">
                            <label class="uk-form-label">
                                {{ form_label(form.description) }}
                            </label>
                            <div class="uk-margin-left">
                                {{ form_widget(form.description) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-flex uk-margin-small-top">
                        <div class="uk-margin-small-left">
                            {{ form_row(form.save) }}
                        </div>
                        <div class="uk-margin-small-left">
                            {{ form_row(form.cancel) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

                <div>
                    {% block content_left_column %}
                    {% endblock %}

                    {# annotations #}
                </div>
            </div>
        </div>

        <div class="uk-width-medium-1-3">
            {% block content_right_column %}
            {% endblock %}
        </div>
    </div>
{% endblock %}