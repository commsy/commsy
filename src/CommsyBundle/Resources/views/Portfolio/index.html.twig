{% extends 'CommsyBundle:Base:detail.html.twig' %}

{% block content %}
    <div class="uk-grid">
        <div class="uk-width-medium-2-3">
            <div class="uk-panel uk-panel-box uk-margin-bottom">
                {# panel title bar #}
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div>Portfolio</div>
                    </div>
                </div>

                {# content #}
                <div class="uk-grid">
                    <div class="uk-width-1-6 uk-margin-large-top" style="padding-top: 0px; z-index:1;">
                        <ul id="portfolioSourceTabs" class="uk-tab uk-tab-left" data-uk-tab>
                            <li class="uk-active" data-portfolio-source-id="my-portfolios"><a href="">{{ 'my portfolios'|trans({}, "portfolio") }}</a></li>
                            <li data-portfolio-source-id="external-portfolios"><a href="">{{ 'external portfolios'|trans({}, "portfolio") }}</a></li>
                        </ul>
                    </div>

                    <div id="portfolio-wrapper" class="uk-width-medium-5-6" data-portfolio-url="{{ path('commsy_portfolio_portfolio', {'roomId': app.request.attributes.get('roomId') }) }}" data-portfolio-initial-id="1">
                        <div class="uk-grid commsy-sticky-table-wrapper">
                            <div class="uk-width-1-1" style="padding-left: 0px; margin-left: -1px;">
                                <ul id="portfolioTabs" class="uk-tab" data-uk-tab>
                                    <li class="uk-active" data-portfolio-id="1"><a href="">Portfolio 1</a></li>
                                    <li class="" data-portfolio-id="2"><a href="">Portfolio 2</a></li>
                                    <li class="" data-portfolio-id="3"><a href="">Portfolio 3</a></li>
                                    <li class="" data-portfolio-id="4"><a href="">Portfolio 4</a></li>
                                    <li class="" data-portfolio-id="5"><a href="">Portfolio 5</a></li>
                                    <li class="" data-portfolio-id="6"><a href="">Portfolio 6</a></li>
                                </ul>
                            </div>
                            <div class="uk-width-1-1 uk-overflow-container" style="border:1px solid #dddddd; margin-top:-1px; margin-left:-1px; padding:10px;">
                                <div id="portfolio-table">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="uk-width-medium-1-3">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-clearfix">
                        <div class="uk-float-right">
                            <a href="#" class="button-toggle uk-button-mini uk-button-secondary" data-uk-toggle="{target: '#list-filter', animation: 'uk-animation-fade'}">
                                <i class="uk-icon-chevron-up"></i>
                            </a>
                        </div>
                        <div class="uk-text-large uk-float-left">
                            {{ 'categories'|trans({}, "room") }}
                        </div>
                    </div>
                </div>
                <div id="list-filter" class="uk-hidden-small" aria-hidden="false">
                    <div id="room-category">
                        <hr class="cs-list-divider"/>
                        <h4 class="cs-list-section-header">
                <span class="cs-detail-section-header-background">
                    {% if is_granted('CATEGORY_EDIT') %}
                        <a href="{{ path('commsy_category_edit', {'roomId': app.request.attributes.get('roomId') }) }}"><i class="uk-icon-edit"></i></a>
                    {% endif %}
                </span>
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}