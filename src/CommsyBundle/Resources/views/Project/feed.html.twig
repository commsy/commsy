{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for project in projects %}
    <article class="uk-comment">
           
        {{ macros.statusColor(readerList, project.itemId) }}
        <header class="uk-comment-header uk-flex">
            <div class="items-checkbox uk-margin-right uk-margin-top uk-hidden">

                {% if is_granted('ITEM_EDIT', project.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox" value="{{ project.itemId }}">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red" data-itemid="{{ project.itemId }}"></i>
                {% endif %}
                
            </div>
            <div class="uk-margin-right uk-flex-item-none">
                    {% if project.creator.isUser %}
                        {{  macros.userIconLink(project.creator) }}
                    {% else %}
                        {{  macros.userIcon(project.creator) }}
                    {% endif %}
                    <div class="uk-comment-meta">
                        {% if project.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                            {{ 'today'|trans({})|capitalize }}, {{project.getModificationDate|date("H:i")}}
                        {% else %}
                            {{project.getModificationDate|date("d.m.Y")}}
                        {% endif %}
                    </div>
            </div>
            <div>
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_project_detail', {'roomId': roomId, 'itemId': project.itemId}) }}">{{ project.title }}</a>
                </h4>
                
                <div class="uk-comment-meta">
                    {% for roomModerator in project.moderatorList.to_array %}
                        {{ roomModerator.fullName }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </div>
                
                <div class="uk-comment-meta">
                    {{ macros.contextLink(roomId, project, currentUser) }}
                </div>
            </div>
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}
