{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for institution in institutions %}
    {% set entryAllowedActions = '' %}
    {% if allowedActions[institution.itemId] is defined %}
        {% set entryAllowedActions = allowedActions[institution.itemId] %}
    {% endif %}
    <article class="uk-comment" data-allowed-actions="{{ entryAllowedActions|json_encode() }}">
           
            {{ macros.statusColor(readerList, institution.itemId) }}
        <header class="uk-comment-header uk-flex">
            <div class="items-checkbox uk-margin-right uk-margin-top uk-hidden">

                {% if is_granted('ITEM_EDIT', institution.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox" value="{{ institution.itemId }}">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red" data-itemid="{{ institution.itemId }}"></i>
                {% endif %}
                
            </div>
            <div class="uk-margin-right uk-flex-item-none">
                    {% if institution.creator.isUser %}
                        {{  macros.userIconLink(institution.creator) }}
                    {% else %}
                        {{  macros.userIcon(institution.creator) }}
                    {% endif %}
                    <div class="uk-comment-meta">
                        {% if institution.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                            {{ 'today'|trans({})|capitalize }}, {{institution.getModificationDate|date("H:i")}}
                        {% else %}
                            {% if not '9999-00-00' in institution.getModificationDate %}
                                {{institution.getModificationDate|date("d.m.Y")}}
                            {% else %}
                                {{institution.getCreationDate|date("d.m.Y")}}
                            {% endif %}
                        {% endif %}
                    </div>
            </div>
            <div>
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_institution_detail', {'roomId': roomId, 'itemId': institution.itemId}) }}">{{ institution.title|decodeHtmlEntity }}</a>
                </h4>

                <div class="uk-comment-meta">
                    {{  macros.fileListShort(institution) }}
                </div>
            </div>
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}
