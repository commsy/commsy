{% extends 'CommsyBundle:base:room.html.twig' %}

{% import 'CommsyBundle:item:macros.html.twig' as macrosItem %}
{% import 'CommsyBundle:topic:macros.html.twig' as macrosTopic %}
{% import 'CommsyBundle:utils:macros.html.twig' as macros %}

{% set item = topic %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-4-5">

            {# topic content panel #}
            <div class="uk-panel uk-panel-box uk-panel-box-primary">

                {# panel teaser #}
                <div class="uk-panel-teaser cs-panel-teaser-primary cs-remove-overflow">
                    <div class="uk-grid">

                        {# quick item navigation #}
                        <div class="uk-flex-inline uk-width-2-5 ">

                            {# back navigation #}
                            <div class="uk-margin-right">
                                {% if firstItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': firstItemId}) }}"><i class="uk-icon-small uk-icon-angle-double-left"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-double-left uk-button-primary"></i>
                                {% endif %}
                                {% if prevItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': prevItemId}) }}"><i class="uk-icon-small uk-icon-angle-left"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-left uk-button-primary"></i>
                                {% endif %}
                            </div>

                            {# item dropdown #}
                            <div class="uk-button-dropdown uk-margin-right" data-uk-dropdown>
                                <button class="uk-button uk-button-mini">
                                    {{ 'Topic'|transchoice(0, {}, "rubric")}} {{ counterPosition }} / {{ count }}
                                    <i class="uk-icon-caret-down"></i>
                                </button>
                                <div id="cs-entry-navigation" class="uk-dropdown uk-padding-remove">
                                   <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">
                                       {% for tempTopic in topicList %}
                                            {% if tempTopic.itemId != topic.itemId %}
                                                <li><a href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': tempTopic.itemId}) }}" data-uk-tooltip="{delay:'250'}" title="{{ tempTopic.title|decodeHtmlEntity }}">{{ tempTopic.title|decodeHtmlEntity|truncate(25) }}</a></li>
                                            {% else %}
                                                <li><a href="#" data-uk-tooltip="{delay:'250'}" title="{{ tempTopic.title|decodeHtmlEntity }}" class="uk-text-muted">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ tempTopic.title|decodeHtmlEntity|truncate(20)  }}</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>

                            {# forward navigation #}
                            <div>
                                {% if nextItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': nextItemId}) }}"><i class="uk-icon-small uk-icon-angle-right"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-right uk-button-primary"></i>
                                {% endif %}
                                {% if lastItemId %}
                                    <a class="uk-button-primary" href="{{ path('commsy_topic_detail', {'roomId': roomId, 'itemId': lastItemId}) }}"><i class="uk-icon-small uk-icon-angle-double-right"></i></a>
                                {% else %}
                                    <i class="uk-icon-small uk-icon-angle-double-right uk-button-primary"></i>
                                {% endif %}
                            </div>
                        </div>

                        {# actions #}
                        <div class="uk-width-3-5 uk-text-right">


                            {# additional actions #}
                            <div class="uk-margin-left uk-button-dropdown" data-uk-dropdown>
                                <button class="uk-button uk-button-mini">
                                    {{ 'selected entries'|trans({}, 'rubric') }}
                                    <i class="uk-icon-caret-down"></i>
                                </button>

                                <div id="cs-additional-actions" class="uk-dropdown  uk-padding-remove">
                                    <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">


                                        {# new entry #}
                                        <li>
                                            {% if is_granted('ITEM_EDIT', 'NEW') %}
                                                <a class="" href="{{ path('commsy_topic_create', {'roomId': roomId}) }}" id="newEntry">
                                                    <i class="uk-icon-small uk-icon-plus-circle uk-icon-justify uk-visible-large"></i> {{ 'new'|trans({}) }}
                                                </a>
                                            {% else %}
                                                <span class="uk-text-muted">
                                                    <i class="uk-icon-small uk-icon-plus-circle uk-icon-justify uk-visible-large"></i> {{ 'new'|trans({}) }}
                                                </span>
                                            {% endif %}
                                        </li>

                                        {# print #}
                                        <li>
                                            <a class="" href="{{ path('commsy_topic_print', {'roomId': roomId, 'itemId': topic.itemId}) }}" target="_blank" id="print">
                                                <i class="uk-icon-small uk-icon-print uk-icon-justify uk-visible-large"></i> {{ 'print'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# save #}
                                        <li>
                                            <a href="#" data-cs-action="{{ {
                                                'url': path('commsy_topic_download', {'roomId': roomId}),
                                                'action': 'save',
                                                'itemId': topic.itemId,
                                                'errorMessage': '<i class="uk-icon-medium uk-icon-info"></i>' ~ 'action error'|trans,
                                                'mode': 'click',
                                            }|json_encode|e('html_attr') }}">
                                                <i class="uk-icon-justify uk-icon-small uk-icon-save uk-visible-large"></i> {{ 'save'|trans({})|capitalize }}
                                            </a>
                                        </li>

                                        {# send #}
                                        <li>
                                            <a href="{{ path('commsy_item_send', {'roomId': roomId, 'itemId': topic.itemId}) }}">
                                                <i class="uk-icon-small uk-icon-send-o uk-icon-justify uk-visible-large"></i> {{ 'send email'|trans({},'user') }}
                                            </a>
                                        </li>

                                        {# delete #}
                                        <li>
                                            {% if is_granted('ITEM_EDIT', item.itemId) %}
                                                <a  href="#" data-cs-action="{{ {
                                                    'url': path('commsy_topic_xhrdelete', {'roomId': roomId, 'itemId': topic.itemId}),
                                                    'action': 'delete',
                                                    'itemId': topic.itemId,
                                                    'errorMessage': '<i class="uk-icon-medium uk-icon-info"></i>' ~ 'action error'|trans,
                                                    'mode': 'click',
                                                    'itemType': topic.itemType,
                                                    'title': 'list choice'|trans({},'rubric')|capitalize,
                                                    'confirmQuestion': 'confirm delete'|trans({},'rubric'),
                                                    'confirmCancel': 'confirm delete cancel'|trans({},'rubric'),
                                                    'confirmOk': 'confirm delete confirm'|trans({},'rubric'),
                                                    'returnUrl': path('commsy_topic_list', {'roomId': roomId})
                                                }|json_encode|e('html_attr') }}">
                                                    <i class="uk-icon-small uk-icon-trash-o uk-icon-justify uk-visible-large"></i> {{ 'trash'|trans({})|capitalize }}
                                                </a>
                                            {% else %}
                                                <span class="uk-text-muted">
                                                    <i class="uk-icon-small uk-icon-trash-o uk-icon-justify uk-visible-large"></i> {{ 'trash'|trans({})|capitalize }}
                                                </span>
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                {% if alert %}
                    {{ macros.showAlert(alert) }}
                {%  endif %}

                {% if pathTopicItem %}
                    {{ macros.showPath(pathTopicItem, topic) }}
                {%  endif %}

                {# content #}
                <article class="uk-article uk-position-relative {% if draft %}cs-edit-draft{% endif %}" data-uk-observe>
                    {# title, etc. #}
                    <div class="cs-toggle" data-uk-observe>
                        {{ macrosTopic.title(topic, modifierList, userCount, readCount, readSinceModificationCount, draft, showRating) }}
                    </div>
            
                    {# description #}
                    <div id="description{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_item_editdescription', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}', cancelEditUrl: '{{ path('commsy_item_canceledit', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                        {{ macrosItem.itemDescription('description', topic, true, topic.description, draft) }}
                    </div>

                    {% if not draft %}
                        {# path #}
                        <div id="path{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_topic_editpath', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}', cancelEditUrl: '{{ path('commsy_item_canceledit', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                            {{ macrosTopic.path(topic, isLinkedToItems, isLinkedToItems) }}
                        </div>
                    {% endif %}
            
                    {# files #}
                    <div id="files{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_upload_uploadform', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}', cancelEditUrl: '{{ path('commsy_item_canceledit', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                        {{ macrosItem.files(topic, draft) }}
                    </div>

                    {% if not draft %}
                        {# links #}
                        <div id="links{{ topic.itemId }}" class="cs-edit-section cs-toggle" data-uk-observe data-cs-edit="{editUrl: '{{ path('commsy_item_editlinks', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}', cancelEditUrl: '{{ path('commsy_item_canceledit', {'roomId': topic.contextId, 'itemId': topic.itemId}) }}' }">
                            {{ macrosItem.links(topic,showHashtags,showCategories,roomCategories, draft) }}
                        </div>
                    {% endif %}

                    {% if draft %}
                        <div id="draft-buttons-wrapper">
                            <a id="draft-save-combine-link" href="" class="uk-button uk-button-primary">
                                {{ 'create entry'|trans({}, "form") }}
                            </a>
                            <a id="draft-cancel-link" href="" class="uk-button uk-button-secondary">
                                {{ 'cancel'|trans({}, "form") }}
                            </a>
                        </div>
                    {% endif %}
                </article>
            </div>
                    </div>

        <div class="uk-width-medium-1-5 cs-addon-navigation">

            {# quick navigation #}
            <div class="uk-panel uk-panel-box uk-padding-remove uk-panel-box-primary" data-uk-sticky>
                <div class="uk-panel-teaser uk-text-large cs-panel-teaser-primary uk-margin-remove">
                    {{ 'quick navigation'|trans({})|capitalize }}
                </div>
                <div id="cs-nav-quick" class="cs-nav-quick">
                    <ul class="uk-list uk-list-striped uk-padding-remove uk-nav uk-nav-side uk-nav-parent-icon" data-uk-nav="{toggle: '>li.uk-parent > a[href=\'#sections{{ topic.itemId }}\']'}" data-uk-scrollspy-nav="{closest: 'li', smoothscroll: true}">
                        <li><a href="#description{{ topic.itemId }}">{{ 'entry description'|trans({})}}</a></li>
                        <li><a href="#topicpath{{ topic.itemId }}">{{ 'topic path'|trans({})}}</a></li>
                        <li><a href="#links{{ topic.itemId }}">{{ 'links'|trans({})}}</a></li>
                     </ul>
                </div>
            </div>

        </div>
      
    </div>
{% endblock %}

{# end #}
