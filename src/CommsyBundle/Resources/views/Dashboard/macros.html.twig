{% macro dashboardFeed(roomItem) %}
    {#<li id="dashboard-latest" class="uk-grid-margin">#}
        <div class="uk-panel uk-panel-box uk-panel-box-primary">
            <div class="uk-panel-teaser cs-panel-teaser-primary">
                <div class="uk-flex uk-flex-middle">
                    <div class="uk-text-large">{{ 'latest entries from all rooms'|trans({}, "room") }}</div>
                 </div>
            </div>

            <ul id="dashboard-feed" class="uk-comment-list">
                {{ render(controller(
                    'CommsyBundle:Dashboard:feed',
                    { 'roomId': roomItem.itemId }
                ))}}
            </ul>

            <div class="feed-load-more" data-uk-scrollspy="{cls: 'uk-animation-fade', repeat: true, topoffset: 0}" data-feed='{"url": "{{ app.request.baseURL }}/dashboard/{{ roomItem.itemId }}/feed/", "target": "#dashboard-feed"}'>
                <i class="uk-icon-refresh uk-icon-spin uk-icon-medium"></i>
            </div>

        </div>
    {#</li>#}
{% endmacro %}

{% macro dashboardCalendar(roomItem, calendars, iCal) %}
    {% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

    {#<li id="dashboard-calendar" class="uk-grid-margin">#}
        <div class="uk-panel uk-panel-box uk-panel-box-primary">
            <div class="uk-panel-teaser cs-panel-teaser-primary">
                <div class="uk-flex uk-flex-middle">
                    <div class="uk-text-large">{{ 'calendar'|trans({}, "date") }}</div>
                 </div>
            </div>

            {{ render(controller(
            'CommsyBundle:Date:calendardashboard',
            { 'roomId': roomItem.itemId }
            ))}}

            <div class="uk-flex uk-flex-right uk-margin-top uk-margin-right">
                <div class="uk-button-dropdown uk-margin-right" data-uk-dropdown>
                    <button class="uk-button">Export...</button>
                    <div class="uk-dropdown uk-dropdown-small">
                        <ul class="uk-nav uk-nav-dropdown">
                            {% for calendar in calendars  %}
                                <li>
                                    <a href="{{ iCal.exportUrl }}&calendar_id={{ calendar.id }}" target="_blank" style="color:#444">
                                        {{ macros.calendarIcon(calendar) }}
                                        <span class="uk-vertical-align-middle">
                                            {{ calendar.title|trans({}, 'date') }}
                                        </span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="uk-button-dropdown" data-uk-dropdown>
                    <button class="uk-button">Abo...</button>
                    <div class="uk-dropdown uk-dropdown-small">
                        <ul class="uk-nav uk-nav-dropdown">
                            {% for calendar in calendars  %}
                                <li>
                                    <a href="{{ iCal.aboUrl|replace({"http:" : "webcal:", "https:" : "webcal:"}) }}&calendar_id={{ calendar.id }}" target="_blank" style="color:#444">
                                        {{ macros.calendarIcon(calendar) }}
                                        <span class="uk-vertical-align-middle">
                                            {{ calendar.title|trans({}, 'date') }}
                                        </span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    {#</li>#}
{% endmacro %}

