</!DOCTYPE html>
{% import 'CommsyBundle:Base:printmacro.html.twig' as macros %}

<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}CommSy{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ absolute_url(asset('css/build/commsy.css'|asset_version)) }}" />
        {% endblock %}
</head>
<body>
{% block content %}
    <div class="uk-grid">

        {# feed #}
        {% block contentwidth %}
            <div>
        {% endblock %}    
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">
                            {% if not module is empty %}

                                {{module|transchoice(1, {}, "rubric")|capitalize }}
                            {% else %}
                                Missing rubric title
                            {% endif %}

                            <div id="commsy-list-count-display" style="display:inline;">
                                ({{itemsCountArray.count}} {{ 'of'|trans({},'messages')}} {{itemsCountArray.countAll}})
                            </div>
                            <div id="commsy-list-count-edit" style="display:inline;" class="uk-hidden">
                                (<span id="commsy-list-count-selected">{{itemsCountArray.count}}</span> {{ 'of'|trans({},'messages')}} <span id="commsy-list-count-all">{{itemsCountArray.countAll}}</span> {{ 'selected'|trans({},'messages')}})
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    {% block feed %}
                        {% for material in materials %}
                            <article class="uk-comment">
                            
                                {# item change information #}
                                    {{ macros.statusColor(readerList, material.itemId) }}
                         
                                 <header class="uk-comment-header uk-flex">
                                   

                                    {# user icon and modification time #}
                                    <div class="uk-margin-right uk-flex-item-none">
                                        {% if material.modificatorItem.isUser %}
                                            {{  macros.userIconLink(material.modificatorItem) }}
                                        {% else %}
                                            {{  macros.userIcon(material.modificatorItem) }}
                                        {% endif %}
                                        <div class="uk-comment-meta">
                                            {% if material.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                                                {{ 'today'|trans({})|capitalize }}, {{material.getModificationDate|date("H:i")}}
                                            {% else %}
                                                {{material.getModificationDate|date("d.m.Y")}}
                                            {% endif %}
                                        </div>
                                    </div>

                                    {# title and meta #}
                                    <div class="uk-width-8-10">
                                        <h4 class="uk-comment-title">
                                            <a>{{ material.title }}</a>
                                        </h4>

                                        <div class="uk-comment-meta">
                                            {% if material.author != '' %}
                                                {{ 'by'|trans({})|capitalize }}: {{material.author}} ({{material.publishingdate}})
                                            {% else %}
                                                {{ 'by'|trans({})|capitalize }}: {{material.modificatorItem.fullname}} ({{material.getCreationDate|date("d.m.Y")}})
                                            {% endif %}
                                        </div>
                                       
                                        <div class="uk-comment-meta">
                                            {{  macros.fileListShort(material) }}
                                        </div>
                                    </div>
                                    {%if showRating or showWorkflow%}
                                        <div class="uk-width-2-10 uk-text-right">
                                        {%if showRating%}
                                            {{  macros.ratingStatus(material, ratingList) }}
                                        {% endif %}
                                        {%if showWorkflow%}
                                            {{  macros.workflowTrafficLight(material) }}
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                </header>
                            </article>
                        {% else %}
                            {{ 'No more results found'|trans}}
                        {% endfor %}
                    {% endblock %}
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}
</body>
</html>
