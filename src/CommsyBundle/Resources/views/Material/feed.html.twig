{% import 'CommsyBundle:Utils:macros.html.twig' as macros %}

{% for material in materials %}
    {% set entryAllowedActions = '' %}
    {% if allowedActions[material.itemId] is defined %}
        {% set entryAllowedActions = allowedActions[material.itemId] %}
    {% endif %}
    <article class="uk-comment" data-allowed-actions="{{ entryAllowedActions|json_encode() }}">
    
        {# item change information #}
            {{ macros.statusColor(readerList, material.itemId) }}
 
        <header class="uk-comment-header uk-flex">
            <div class="items-checkbox uk-margin-right uk-margin-top uk-hidden">
                {% if is_granted('ITEM_EDIT', material.itemId) %}
                    <form class="uk-form">
                        <input type="checkbox" value="{{ material.itemId }}">
                    </form>
                {% else %}
                    <i class="uk-icon-ban uk-icon-small red" data-itemid="{{ material.itemId }}"></i>
                {% endif %}
            </div>

            {# user icon and modification time #}
            <div class="uk-margin-right uk-flex-item-none">
                {% if material.modificatorItem.isUser %}
                    {{  macros.userIconLink(material.modificatorItem) }}
                {% else %}
                    {{  macros.userIcon(material.modificatorItem) }}
                {% endif %}
                <div class="uk-comment-meta">
                    {% if material.getModificationDate|date("d.m.Y") == "now"|date("d.m.Y") %}
                        {{ 'today'|trans({})|capitalize }}, {{material.getModificationDate|date("H:i")}}
                    {% else %}
                        {{material.getModificationDate|date("d.m.Y")}}
                    {% endif %}
                </div>
            </div>

            {# title and meta #}
            <div class="uk-width-8-10">
                <h4 class="uk-comment-title">
                    <a href="{{ path('commsy_material_detail', {'roomId': roomId, 'itemId': material.itemId}) }}">{{ material.title }}</a>
                </h4>

                <div class="uk-comment-meta">
                    {% if material.author != '' %}
                        {{ 'by'|trans({})|capitalize }}: {{material.author}} ({{material.publishingdate}})
                    {% else %}
                        {{ 'by'|trans({})|capitalize }}: {{material.modificatorItem.fullname}} ({{material.getCreationDate|date("d.m.Y")}})
                    {% endif %}
                </div>
               
                <div class="uk-comment-meta">
                    {{  macros.fileListShort(material) }}
                </div>
            </div>
            {%if showRating or showWorkflow%}
                <div class="uk-width-2-10 uk-text-right">
                    {%if showRating%}
                        {{  macros.ratingStatus(material, ratingList) }}
                    {% endif %}
                    {%if showWorkflow%}
                        {{  macros.workflowTrafficLight(material, workflowTitles) }}
                    {% endif %}
                </div>
            {% endif %}
        </header>
    </article>
{% else %}
    {{ 'No more results found'|trans}}
{% endfor %}
