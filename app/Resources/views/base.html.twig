<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}CommSy{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/build/commsy.css'|asset_version) }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body id="commsy" class="nav-collapsed">

        <div id="commsy_navigation">

            <div id="portal_logo">
            </div>

            <div id="my_avatar">
                {% block profile %}
                {% endblock %}
            </div>

            {% block roomlist %}
            {% endblock %}


            {% block side_navigation %}
            {% endblock %}

        </div>

        <div id="content">
            <!-- navbar -->
            <nav class="uk-navbar uk-navbar-attached">
                <!-- right -->
                <div class="uk-navbar-flip">
                    <div class="uk-navbar-content">
                        {# global search #}
                        {{ render(controller(
                            'CommsyBundle:Search:searchForm',
                            { 'roomId': app.request.attributes.get('roomId') }
                        ))}}
                    </div>

                    {# global actions #}
                    {{ render(controller(
                        'CommsyBundle:User:globalNavbar',
                        { 'roomId': app.request.attributes.get('roomId') }
                    ))}}

                    <div class="uk-navbar-content">
                        <ul class="uk-navbar-nav">
                            <li>
                                <a href="{{ path('commsy_logout_logout', {'roomId': app.request.attributes.get('roomId') }) }}"><i class="uk-icon-power-off"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- toggle -->
                <a href="" class="uk-navbar-toggle uk-visible-small"></a>

                <div class="uk-navbar-brand cs-padding-5">
                    {% block roomTitle %}
                        <a href="{{ path('commsy_room_home', {'roomId': app.request.attributes.get('roomId') }) }}">
                            {{ app.request.attributes.get('roomId')|roomTitle }}
                        </a>
                    {% endblock %}
                </div>
            </nav>

            <!-- breadcrumb -->
            {% block breadcrumb %}
            {% endblock %}

            <!-- cover -->
            {% block cover %}
            {% endblock %}

            <!-- container -->
            <div id="container" class="uk-container">
                {% block content %}{% endblock %}
            </div>
        </div>
        
        {% block javascripts %}
            <script src="{{ asset('js/build/commsy.js'|asset_version) }}"></script>
        {% endblock %}
    </body>
</html>
