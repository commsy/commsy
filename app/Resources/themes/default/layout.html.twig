{* include template functions *}
{include file="include/functions.tpl" inline}

{% block site %}
    <?xml version="1.0" encoding="utf-8"?>
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

    <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">

    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        <meta name="robots" content="index, follow" />
        <meta name="revisit-after" content="7 days" />
        <meta name="language" content="German, de, deutsch" />
        <meta name="author" content="" />
        <meta name="page-topic" content="" />
        <meta name="keywords" content="" />
        <meta name="description" content="" />
        <meta name="copyright" content="" />
        
        {% block favicon %}
            <link rel="icon" href="commsy8.ico" type="image/x-icon">
            <link rel="shortcut icon" href="commsy8.ico" type="image/x-icon">
        {% endblock %}

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" media="screen" href="js/src/dijit/themes/tundra/tundra.css" />
         <link rel="stylesheet" type="text/css" media="screen" href="js/src/cbtree/themes/tundra/tundra.css" />
         <link rel="stylesheet" type="text/css" media="screen" href="js/src/dojox/form/resources/UploaderFileList.css" />
         <link rel="stylesheet" type="text/css" media="screen" href="js/src/dojox/image/resources/Lightbox.css" />
         <link rel="stylesheet" type="text/css" media="screen" href="js/src/dojox/widget/ColorPicker/ColorPicker.css" />
         <link rel="stylesheet" type="text/css" media="screen" href="js/src/dojox/calendar/themes/tundra/Calendar.css" />
       <link rel="stylesheet" type="text/css" media="screen" href="{{ basic.tpl_path }}cs_dojo.css" />

        {% block css %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ basic.tpl_path }}styles.css" />
            <link rel="stylesheet" type="text/css" media="screen" href="{{ basic.tpl_path }}styles_addon.css" />
        {% endblock %}

        <link rel="stylesheet" type="text/css" media="print" href="{{ basic.tpl_path }}styles.css" />

        <link rel="stylesheet" type="text/css" media="screen" href="js/3rdParty/projekktor-1.3.09/themes/maccaco/projekktor.style.css" />

        {% block js %}
            <!-- SCRIPTS -->

            <script type="text/javascript" src="js/3rdParty/projekktor-1.3.09/jquery-1.9.1.min.js"></script>
            <script type="text/javascript" src="js/3rdParty/projekktor-1.3.09/projekktor-universal.min.js"></script>

            {% if environment.c_js_mode == 'layer' %}
                <script src="js/src/layerConfig.js{% if javascript.version is defined and javascript.version is not empty %}?{$javascript.version}{% endif %}"></script>
            {% else %}
                <script src="js/src/sourceConfig.js"></script>
            {% endif %}
    
            <script>
                {% if javascript.variables_as_json is defined and javascript.variables_as_json is not empty %}
                    var from_php = '{{ javascript.variables_as_json|raw }}';
                {% endif %}
                {% if javascript.locale is defined and javascript.locale is not empty %}
                    dojoConfig.locale = '{{ javascript.locale }}';
                {% endif %}
                {% if javascript.version is defined and javascript.version is not empty %}
                    dojoConfig.cacheBust = '{{ javascript.version }}';
                {% endif %}
            </script>
            <script src="js/3rdParty/ckeditor_4.4.3/ckeditor.js{% if javascript.version is defined and javascript.version is not empty %}?{{ javascript.version }}{% endif %}"></script>
            <script>
                CKEDITOR.env.isCompatible = true;
            </script>

            {% if environment.c_js_mode == 'layer' %}
                <script src="js/build/release/dojo/dojo.js{% if javascript.version is defined and javascript.version is not empty %}?{{ javascript.version }}{% endif %}"></script>
                <script>
                    require(["layer/commsy", "commsy/main"]);
                </script>
    
            {% else %}
                <script src="js/src/dojo/dojo.js{% if javascript.version is defined and javascript.version is not empty %}?{{ javascript.version }}{% endif %}"></script>
                <script>
                    require(["commsy/main"]);
                </script>
            {% endif %}
    
            <script type="text/javascript" src="javascript/swfobject.js"></script>
            {% if environment.c_jsmath_enable %}
                <script type="text/javascript"> jsMath = {{{Controls: {cookie: {scale: 120}}}}} </script>
                <script type="text/javascript" src="{{ environment.c_jsmath_url }}/jsMath.js"></script>
            {% endif %}
        {% endblock %}

        <title>{{ environment.room_title }} - ___{$environment.module_name}___</title>

    </head>
{% block  body_begin %}
    <body class="tundra">
{% endblock %}
        {% block header %}
            {% block warning %}{% endblock %}
            {% block top_menu %}{% endblock %}
            {% block room_overlay %}{% endblock %}
            {% block external_top_menu %}{% endblock %}
            <div id="wrapper">
        {% endblock %}

            <div id="header"> <!-- Start header -->
                {% block logo_area %}
                <div id="logo_area">
                    {% if environment.logo is defined and environment.logo is not empty %}
                        <img src="commsy.php?cid={{ environment.cid }}&mod=picture&fct=getfile&picture={{ environment.logo }}" alt="Logo" /> <!-- Logo-Hoehe 60 Pixel -->
                    {% else %}
                        <img src="{{ basic.tpl_path }}img/spacer.gif" style="width:1px;" alt="" />
                    {% endif %}
                    {% if environment.show_room_title %}
                        <span>{{ environment.room_title|truncate(50, true, "...") }}</span>
                    {% endif %}
                </div>
                {% endblock %}

                {% block room_search %}
                <div id="search_area">
                    <div id="search_navigation">

                        <div id="commsy_search">
                            <form action="commsy.php?cid={{ environment.cid }}&mod=search&fct=index" method="post">
                                {% if environment.module != 'home' and environment.module != 'search' %}
                                    <input type="hidden" name="form_data[selrubric]" value="{{ environment.module }}"/>
                                {% elseif environment.post.form_data.selrubric is defined and environment.post.form_data.selrubric is not empty %}
                                    <input type="hidden" name="form_data[selrubric]" value="{{ environment.post.form_data.selrubric }}"/>
                                {% endif %}
                                <input name="form_data[keywords]"{% if environment.with_indexed_search != true %} onclick="javascript:document.getElementById('search_input').value=''"{% endif %} id="search_input" type="text" value="{% if environment.module != 'search' %}{% if environment.module == 'home' %}___CAMPUS_SEARCH_INDEX___{% else %}___COMMON_SEARCHFIELD___{% endif %}{% else %}{% if search.parameters.search is defined and search.parameters.search is not empty %}{{ search.parameters.searchÂ }}{% endif %}{% endif %}" />
                                {% if environment.with_indexed_search %}
                                    <input id="search_suggestion" type="text" value="" />
                                {% endif %}
                                <input id="search_submit" type="submit" class="search_button" value="___COMMON_GO_BUTTON2___!" />
                            </form>
                        </div>
                    </div>
                </div>
                {% endblock %}

                <div class="clear"> </div>
            </div> <!-- Ende header -->

            {% block layout_content %}{% endblock %}

            <div id="footer"> <!-- Start footer -->
                <div id="footer_left">
                    <p>CommSy
                    {% if environment.commsy_version is defined and environment.commsy_version is not empty %}
                        {{ environment.commsy_version }}
                    {% endif %}
                    {% if environment.commsy_version_addon is defined and environment.commsy_version_addon is not empty %}
                       - {{ environment.commsy_version_addon }}
                    {% endif %}
                    </p>
                </div>

                <div id="footer_right">
                    <p>
                        <span>{{ 'now'|date('d.') }} {{ translation.act_month_long }} {{ 'now'|date('Y, H:i') }}</span>
                        {% if environment.show_moderator_link is defined and environment.show_moderator_link is not empty %}
                           <a href="#" class="open_popup" data-custom="module: 'mailtomod'">___MAIL_TO_MODERATOR_HEADLINE___</a>
                        {% endif %}
                        {% if environment.show_service_link is defined and environment.show_service_link is not empty %}
                            <div style="padding-left:10px;">{{ environment.service_link }}</div>
                        {% endif %}
                    </p>
                </div>

                <div class="clear"> </div>
            </div> <!-- Ende footer -->


            <!-- hier Google Adwords -->


        </div> <!-- Ende wrapper -->
        <div id="popup_uploader"></div>
{% block body_end %}
        {% if basic.html_before_body_ends is not empty %}
            {{ basic.html_before_body_ends }}
        {% endif %}
    </body>
{% endblock %}

    </html>
{% endblock %}