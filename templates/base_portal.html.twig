<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{{ pageTitle() }}{% endblock %}</title>

        {{ encore_entry_link_tags('app_portal') }}

        <link rel="icon" type="image/x-icon" href="{{ absolute_url(asset('favicon.ico')) }}" />
    </head>
    <body>
        <div class="uk-inline uk-width-1-1">
            {# Top navigation bar #}
            <div id="top_navigation">
                {% block top_navigation %}{% endblock %}
            </div>

            {# Left sidebar used for context navigation, if needed #}
            {% block sidebar_left %}{% endblock %}

            {# Main content area #}
            <div id="main" uk-height-viewport="expand: true">
                {% block breadcrumb %}{% endblock %}
                {% block cover %}{% endblock %}

                <div class="uk-section uk-section-small">
                    <div class="uk-container uk-container-large">
                        {% block main %}{% endblock %}
                    </div>
                </div>
            </div>

            {# Footer #}
            <div id="footer">
                <div class="uk-section uk-section-default uk-section-xsmall uk-text-small">
                    <div class="uk-container">
                        <div class="uk-flex uk-flex-center">
                            <div>CommSy {{ commsy.version }}</div>
                            {% if commsy.server.dataPrivacyEnabled %}
                                <div class="uk-margin-left">
                                    <a href="{{ path('app_server_dataprivacy') }}">{{ 'data privacy'|trans({}, 'portal') }}</a>
                                </div>
                            {% endif %}
                            {% if commsy.server.impressumEnabled %}
                                <div class="uk-margin-left">
                                    <a href="{{ path('app_server_impressum') }}">{{ 'impressum'|trans({}, 'portal') }}</a>
                                </div>
                            {% endif %}
                            {% if commsy.server.accessibilityEnabled %}
                                <div class="uk-margin-left">
                                    <a href="{{ path('app_server_accessibility') }}">{{ 'accessibility'|trans({}, 'portal') }}</a>
                                </div>
                            {% endif %}
                        </div>

                        {% block footer %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>

        {% block javascripts %}
            {% include 'javascripts.html.twig' %}
        {% endblock %}
    </body>
</html>