{% extends 'layout.html.twig' %}

{% block sidebar_left %}
    {% include 'components/context_navigation.html.twig' with {'menu_name': 'main'} only %}
{% endblock %}

{% block breadcrumb %}
    {{ wo_render_breadcrumbs({ viewTemplate: "breadcrumbs/breadcrumbs.html.twig" }) }}
{% endblock %}

{% block main %}
    {% block alert %}
        {% if commsy.room is not null and commsy.room.isArchived() %}
            <div class="uk-width-expand">
                <div class="uk-alert uk-alert-warning" style="border: 1px solid rgba(226,131,39,.3)" data-uk-alert>
                    <h2><i class="uk-icon-archive uk-icon-justify uk-margin-small-right"></i>{{ 'Archived room'|trans({}, "room") }}</h2>
                    <p>{{ 'Archived room info'|trans({}, "room") }}</p>
                </div>
            </div>
        {% endif %}
    {% endblock %}

    <div uk-grid>

        <div class="uk-width-1-3@m uk-flex-last@m">
            {% block sidebar %}{% endblock %}
        </div>

        <div class="uk-width-2-3@m">
            {% block main_content %}{% endblock %}
        </div>

    </div>
{% endblock %}
