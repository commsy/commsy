{% extends 'base/profile.html.twig' %}

{% import 'utils/macros.html.twig' as macros %}

{% form_theme form 'form/uikit_horizontal_layout.html.twig' %}

{% block side_navigation %}
    {{ knp_menu_render('account') }}
{% endblock %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-4-4">
            <div class="uk-card uk-card-default">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-between">
                        <div class="uk-text-large">{{ 'additional'|trans({}, 'menu') }}</div>
                    </div>
                </div>
                <div class="uk-margin-left uk-margin-right">
                    {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <div class="uk-panel uk-margin-large-bottom">
                            <table class="uk-table">
                                <tr>
                                    <td>
                                        <h1 class="uk-panel-title">{{ 'dashboard'|trans({},'menu')|capitalize }}</h1>
                                    </td>
                                </tr>
                                <tr>
                                    <td><h1 class="uk-panel-title">{{ 'language'|trans({},'profile') }}</h1></td>
                                </tr>
                                <tr>
                                    <td>
                                        <div>{{ 'languageDescription'|trans({}, "profile") }}</div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        {{ form_widget(form.language) }}
                                    </td>
                                </tr>
                                {% if form.emailToCommsy is defined %}
                                    <tr>
                                        <td><hr/></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h1 class="uk-panel-title">{{ 'emailToCommsy'|trans({},'profile') }}</h1>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div>{{ 'email_to_commsy_description'|trans({}, "profile")|format(portalEmail,uploadEmail)|raw }}</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            {{ form_row(form.emailToCommsy) }}
                                            <div class="uk-form-controls">
                                                {{ 'emailToCommsyText'|trans({},'profile') }} <span class='uk-text-bold'>{{ uploadEmail }}</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_row(form.emailToCommsySecret) }}</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="uk-form-controls">
                                                <span>{{ 'emailToCommsyTextPassword'|trans({}, 'profile') }}</span>
                                                <br/>
                                                <span class="uk-text-bold">{{ 'emailToCommsyTextPasswordTemplate'|trans({}, 'profile') }}</span>
                                                <br/>
                                                <span>{{ 'emailToCommsyTextAccounts'|trans({}, 'profile') }}</span>
                                                <br/>
                                                <span class="uk-text-bold">{{ 'emailToCommsyTextAccountsTemplate'|trans({}, 'profile') }}</span>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}
                                {#<tr>#}
                                    {#<td><hr/></td>#}
                                {#</tr>#}
                                {#<tr>#}
                                    {#<td>#}
                                        {#<h1 class="uk-panel-title">{{ 'miscellaneous'|trans({},'profile')|capitalize }}</h1>#}
                                    {#</td>#}
                                {#</tr>#}
                                {#<tr>#}
                                    {#<td>{{ form_row(form.autoSaveStatus) }}</td>#}
                                {#</tr>#}
                            </table>                            
                        </div>
    
                        <div class="uk-panel uk-margin-large-bottom">
                            <table class="uk-table">
                                <tr>
                                    <td>{{ form_widget(form.save) }}</td>
                                </tr>
                            </table>
                        </div>
                        {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
