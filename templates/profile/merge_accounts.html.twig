{% extends 'App:base:profile.html.twig' %}

{% import 'App:utils:macros.html.twig' as macros %}

{% form_theme form 'App:form:uikit_horizontal_layout.html.twig' %}

{% block side_navigation %}
    {{ knp_menu_render('account') }}
{% endblock %}

{% block content %}
    <div class="uk-grid">

        <div class="uk-width-medium-4-4">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'combineAccount'|trans({}, 'profile') }}</div>
                    </div>
                </div>
                <div class="uk-margin-left uk-margin-right">
                    {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="uk-panel uk-margin-large-bottom">

                            <table class="uk-table">
                                <tr>
                                    <td>{{ 'mergeAccountsTextFirstLine'|trans({},'profile') }}</td>
                                </tr>
                                <tr>
                                    <td>{{ 'mergeAccountsTextSecondLine'|trans({},'profile') }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.combineUserId) }}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_row(form.combinePassword) }}</td>
                                </tr>
                                {% if show_auth_source %}
                                    <tr>
                                        <td>{{ form_row(form.auth_source) }}</td>
                                    </tr>
                                {% endif %}
                            </table>

                        </div>
                        <div class="uk-panel uk-margin-large-bottom">
                            <table class="uk-table">
                                <tr>
                                    <td>{{ form_widget(form.save) }}</td>
                                </tr>
                            </table>
                        </div>
                        {{ form_row(form._token) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
