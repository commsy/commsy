            <a href="#discarticle{{ child.item.itemId }}">{{- child.item.title|decodeHtmlEntity -}}</a>

        {% if child.children is defined %}
            <ul>
                {{ discussionMacros.articleTree(child.children, level+1) }}
            </ul>
        {% endif %}

        </li>
    {% endfor %}
{% endmacro %}

