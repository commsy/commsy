{% extends 'layout.html.twig' %}

{% block top_navigation_left %}
{#    <div class="uk-navbar-item uk-logo">Portalübersicht</div>#}
{% endblock %}

{% block main %}

    {% if activePortals is not empty %}
        <div class="uk-grid-match uk-child-width-expand@m uk-flex uk-flex-center" uk-grid>

            {% for activePortal in activePortals %}
                <div class="uk-width-medium">
                    <div class="uk-card uk-card-default uk-card-small">
                        <div class="uk-card-body">
                            <img src="{{ asset('build/agora_logo.png') }}" style="height: 80px">
                        </div>

                        <div class="uk-card-header">
                            <div class="uk-grid-small uk-child-width-1-2" uk-grid>
                                <div>
                                    <dl class="uk-description-list uk-text-meta uk-text">
                                        <dt>Räume</dt>
                                        <dd>3017</dd>
                                    </dl>
                                </div>
                                <div>
                                    <dl class="uk-description-list uk-text-meta uk-text">
                                        <dt>Mitglieder</dt>
                                        <dd>16895</dd>
                                    </dl>
                                </div>
                            </div>

                            <progress class="uk-progress" value="66" max="100"></progress>
                        </div>

                        <div class="uk-card-body uk-margin-large-bottom">
                            <h3 class="uk-card-title">{{ activePortal.title }}</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
                        </div>

                        <div class="uk-card-footer uk-position-bottom">
                            <a href="{{ path('app_login', { 'context': activePortal.id }) }}" class="uk-button uk-button-text">{{ 'portal.enter'|trans({}, 'portal') }}</a>
                        </div>

                        {#                    <div class="uk-card-body uk-margin-large-bottom">#}
                        {#                        <h3 class="uk-card-title"><span class="uk-text-muted">Portal gelöscht / inaktiv (gelöscht)</span></h3>#}
                        {#                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>#}
                        {#                    </div>#}

                        {#                    <div class="uk-card-footer uk-position-bottom">#}
                        {#                        <span class="uk-text-muted" uk-tooltip="title: Dieses Portal ist nicht verfügbar">Enter</span>#}
                        {#                    </div>#}
                    </div>
                </div>

            {% endfor %}
        </div>
    {% else %}
        <div class="uk-section uk-section-muted">
            <div class="uk-container uk-container-xsmall">
                <p>
                    {{ 'portal.none'|trans({}, 'portal') }}

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if is_granted('ROOT') %}
                            <div>
                                <a href="{{ path('app_server_createportal') }}">{{ 'portal.create'|trans({}, 'portal') }}</a>
                            </div>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}">{{ 'login.system_admin'|trans({}, 'login') }}</a>
                    {% endif %}
                </p>
            </div>
        </div>

    {% endif %}
{% endblock %}