{% extends 'base/list.html.twig' %}
{% form_theme form 'form/uikit_horizontal_layout.html.twig' %}

{% block feed %}
    <ul id="mark-feed" class="uk-comment-list" data-uk-observe>
        {{ render(controller(
            'App\\Controller\\MarkedController::feedAction', {
                'roomId': roomId,
                'markFilter': app.request.query.get('marked_filter')
            }
        ))}}
    </ul>

    <div class="feed-load-more" data-uk-scrollspy="{repeat: true, cls:'cs-toggle-class'}" data-feed='{"url": "{{ app.request.baseURL }}/room/{{ roomId }}/mark/feed/", "target": "#mark-feed"}'>
        <i class="uk-icon-refresh uk-icon-spin uk-icon-medium"></i>
    </div>
    <div class="cs-toggle-class"></div>
{% endblock %}

{% block sortbox %}
{% endblock %}

{% block editbox %}
    <div class="uk-button-dropdown uk-button-primary" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
        <button class="uk-button uk-button-mini">{{ 'selected entries'|trans({},'rubric')|capitalize }} <i class="uk-icon-caret-down"></i></button>
        <div id="cs-entry-navigation" class="uk-padding-remove uk-dropdown uk-dropdown-small">
            <ul class="uk-nav uk-nav-dropdown uk-list-striped uk-padding-remove uk-margin-remove uk-text-left">

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-cs-action="{{ {
                        'url': path('app_marked_xhrinsert', {'roomId': roomId}),
                        'action': 'insert',
                        'errorMessage': '<i class="uk-icon-medium uk-icon-info"></i>' ~ 'action error'|trans,
                        'mode': 'selection',
                        'noSelectionMessage': 'no entry selected'|trans({},'item')
                    }|json_encode|e('html_attr') }}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-paste uk-visible-large"></i> {{ 'insert'|trans({'%roomname%': roomname },'rubric') }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-cs-action="{{ {
                        'url': path('app_marked_xhrcategorize', {'roomId': roomId}),
                        'action': 'categorize',
                        'errorMessage': '<i class="uk-icon-medium uk-icon-info"></i>' ~ 'action error'|trans,
                        'mode': 'selection',
                        'noSelectionMessage': 'no entry selected'|trans({}, 'item'),
                    }|json_encode|e('html_attr') }}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-sitemap uk-visible-large"></i> {{ 'categorize'|trans({},'rubric') }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-cs-action="{{ {
                        'url': path('app_marked_xhrhashtagging', {'roomId': roomId}),
                        'action': 'hashtagging',
                        'errorMessage': '<i class="uk-icon-medium uk-icon-info"></i>' ~ 'action error'|trans,
                        'mode': 'selection',
                        'noSelectionMessage': 'no entry selected'|trans({}, 'item'),
                    }|json_encode|e('html_attr') }}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-hashtag uk-visible-large"></i> {{ 'hashtagging'|trans({},'rubric') }}
                    </a>
                </li>

                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-cs-action="{{ {
                        'url': path('app_marked_xhrremove', {'roomId': roomId}),
                        'action': 'remove',
                        'errorMessage': '<i class="uk-icon-medium uk-icon-info"></i>' ~ 'action error'|trans,
                        'mode': 'selection',
                        'noSelectionMessage': 'no entry selected'|trans({}, 'item'),
                        'confirmQuestion': 'confirm delete'|trans({}, 'rubric'),
                        'confirmCancel': 'confirm delete cancel'|trans({}, 'rubric'),
                        'confirmOk': 'confirm delete confirm'|trans({}, 'rubric'),
                        'returnUrl': path('app_marked_list', {'roomId': roomId})
                    }|json_encode|e('html_attr') }}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-remove uk-visible-large"></i> {{ 'remove marked'|trans({},'rubric') }}
                    </a>
                </li>

                {#
                <li>
                    <a href="#" class="commsy-select-action" data-uk-button data-commsy-list-action='{"target":".feed ul", "actionUrl": "{{ path('app_mark_feedaction', {'roomId': roomId}) }}", "action": "insert"}' data-confirm-delete="{{ 'confirm delete'|trans({},'rubric')}}" data-confirm-delete-cancel ="{{'confirm delete cancel'|trans({},'rubric')}}" data-confirm-delete-confirm ="{{'confirm delete confirm'|trans({},'rubric')}}">
                        <i class="uk-icon-justify uk-icon-small uk-icon-paste uk-visible-large"></i> {{ 'insert stack'|trans({},'rubric') }}
                    </a>
                </li>
                #}
            </ul>
        </div>
    </div>
{% endblock%}
