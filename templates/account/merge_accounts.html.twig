{% extends 'base/profile.html.twig' %}

{% import 'utils/macros.html.twig' as macros %}

{% form_theme form 'form/uikit_horizontal_layout.html.twig' %}

{% block side_navigation %}
    {{ knp_menu_render('account') }}
{% endblock %}

{% block content %}
    {% component 'v2:panel' with { title: 'combineAccount'|trans({}, 'profile') } %}
        {% block content %}
            {{ form_start(form) }}
                {{ form_errors(form) }}

                <table class="uk-table">
                    <tr>
                        <td>{{ 'mergeAccountsTextFirstLine'|trans({},'profile') }}</td>
                    </tr>
                    <tr>
                        <td>{{ 'mergeAccountsTextSecondLine'|trans({},'profile') }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_row(form.combineUserId) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_row(form.combinePassword) }}</td>
                    </tr>
                    {% if form.auth_source is defined %}
                        <tr>
                            <td>{{ form_row(form.auth_source) }}</td>
                        </tr>
                    {% endif %}
                </table>

                <table class="uk-table">
                    <tr>
                        <td>{{ form_widget(form.save) }}</td>
                    </tr>
                </table>
                {{ form_row(form._token) }}
            {{ form_end(form) }}
        {% endblock %}
    {% endcomponent %}
{% endblock content %}
