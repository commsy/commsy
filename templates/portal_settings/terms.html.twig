{% extends 'layout.html.twig' %}

{% form_theme form 'form/uikit3/uikit_horizontal_layout.html.twig' %}

{% block sidebar_left %}
    {% embed 'components/context_navigation.html.twig' %}
        {% block menu %}{{ knp_menu_render('portal_settings', { 'template': 'menu/knp_menu_sidebar_uikit3.html.twig' } ) }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block main %}
    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'terms'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form_start(form) }}
            {{ form_row(form.AGBEnabled)}}
            {{ form_row(form.termsGerman)}}
            {{ form_row(form.termsEnglish)}}
            <div class="uk-form-row uk-margin">
                <label class="uk-form-label"><em>{{ 'Notes'|trans({}, "portal") }}</em></label>
                <div class="uk-form-controls">
                    <div class="uk-alert-primary">
                        {# TODO: use route `app_portalsettings_roomtermstemplates` with param `portalId` instead #}
                        <a href="{{ path('app_portal_roomtermstemplates', { 'roomId': portal.id }) }}">{{ 'You can set up templates for room terms here'|trans({}, 'portal') }}</a>
                    </div>
                    <div class="uk-alert-warning">{{ 'terms update note'|trans({}, "portal") }}</div>
                </div>
            </div>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
