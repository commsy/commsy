{% extends 'layout.html.twig' %}

{% form_theme form 'form/uikit3/uikit_horizontal_layout.html.twig' %}

{% block sidebar_left %}
    {% embed 'components/context_navigation.html.twig' %}
        {% block menu %}{{ knp_menu_render('portal_settings') }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block main %}
    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Time'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form_start(form) }}
            {{ form_row(form.showTime) }}
            {{ form_row(form.timeCycleNameGerman) }}
            {{ form_row(form.timeCycleNameEnglish) }}
            {{ form_row(form.futureTimeCycles) }}
            <hr />
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}