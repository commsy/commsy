{% extends 'layout.html.twig' %}

{% form_theme form 'form/uikit3/uikit_horizontal_layout.html.twig' %}

{% block sidebar_left %}
    {% include 'components/context_navigation.html.twig' with {'menu_name': 'portal_settings'} only %}
{% endblock %}

{% block main %}
    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Portalhome'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form_start(form) }}
            {{ form_label(form.showRoomsOnHome) }}
            {{ form_row(form.showRoomsOnHome[0]) }}
            {{ form_row(form.showRoomsOnHome[1]) }}
            {{ form_row(form.showRoomsOnHome[2]) }}
            {{ form_row(form.showTemplatesInRoomList) }}
            {{ form_label(form.sortRoomsBy) }}
            {{ form_row(form.sortRoomsBy[0]) }}
            {{ form_row(form.sortRoomsBy[1]) }}
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}