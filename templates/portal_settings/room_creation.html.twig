{% extends 'layout.html.twig' %}

{% form_theme communityRoomsForm 'form/uikit3/uikit_horizontal_layout.html.twig' %}
{% form_theme projectRoomsForm 'form/uikit3/uikit_horizontal_layout.html.twig' %}

{% block sidebar_left %}
    {% include 'components/context_navigation.html.twig' with {'menu_name': 'portal_settings'} only %}
{% endblock %}

{% block main %}
    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Community rooms'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form_start(communityRoomsForm) }}
            {{ form_label(communityRoomsForm.communityRoomCreationStatus) }}
            {{ form_row(communityRoomsForm.communityRoomCreationStatus[0]) }}
            {{ form_row(communityRoomsForm.communityRoomCreationStatus[1]) }}
            {{ form_label(communityRoomsForm.communityShowDeactivatedEntriesTitle) }}
            {{ form_row(communityRoomsForm.communityShowDeactivatedEntriesTitle[0]) }}
            {{ form_row(communityRoomsForm.communityShowDeactivatedEntriesTitle[1]) }}
            {{ form_end(communityRoomsForm) }}
        {% endblock %}
    {% endembed %}

    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Project rooms'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form_start(projectRoomsForm) }}
            {{ form_label(projectRoomsForm.projectRoomCreationStatus) }}
            {{ form_row(projectRoomsForm.projectRoomCreationStatus[0]) }}
            {{ form_row(projectRoomsForm.projectRoomCreationStatus[1]) }}
            {{ form_label(projectRoomsForm.projectShowDeactivatedEntriesTitle) }}
            {{ form_row(projectRoomsForm.projectShowDeactivatedEntriesTitle[0]) }}
            {{ form_row(projectRoomsForm.projectShowDeactivatedEntriesTitle[1]) }}
            {{ form_end(projectRoomsForm) }}
        {% endblock %}
    {% endembed %}
{% endblock %}