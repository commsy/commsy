{% extends 'layout.html.twig' %}

{% form_theme licenseForm 'form/uikit3/uikit_horizontal_layout.html.twig' %}
{% form_theme licenseSortForm 'form/uikit3/uikit_horizontal_layout.html.twig' %}

{% block sidebar_left %}
    {% include 'components/context_navigation.html.twig' with {'menu_name': 'portal_settings'} only %}
{% endblock %}

{% block main %}
    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Create new license'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form(licenseForm) }}
        {% endblock %}
    {% endembed %}

    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Lizenzen bearbeiten'|trans({}, "portal") }}{% endblock %}

        {% block body %}
            {{ form(licenseSortForm) }}
        {% endblock %}
    {% endembed %}
{% endblock %}