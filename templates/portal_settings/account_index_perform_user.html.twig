{% extends 'layout.html.twig' %}

{% form_theme form 'form/uikit3/uikit_horizontal_layout.html.twig' %}

{% block sidebar_left %}
    {% include 'components/context_navigation.html.twig' with {'menu_name': 'portal_settings'} only %}
{% endblock %}

{% block main %}
    {% embed 'components/card.html.twig' %}
        {% block title %}{{ 'Accounts'|trans({}, "portal") }}{% endblock %}
        {% block body %}

            {{ form_start(form) }}
            <h2>{{ 'Are you sure you want to perform the action'|trans({},'portal') }} "{{ action|trans({},'portal') }}" {{ 'For the following users'|trans({},'portal') }}: {{ users }}?</h2>
            {{ form_widget(form.cancel) }}
            {{ form_widget(form.execute) }}
            <br />
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}