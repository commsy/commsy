{% macro timeType(type) %}
    {% if type == '1' %}
        {{ "minutes"|trans({},'todo') }}
    {% elseif type == '2' %}
        {{ "hours"|trans({},'todo') }}
    {% elseif type == '3' %}
        {{ "days"|trans({},'todo') }}
    {% endif %}
{% endmacro %}

{% macro responsibility(item,participants) %}
