{% extends 'App:base:portal.html.twig' %}
{% form_theme form 'App:form:uikit_horizontal_layout.html.twig' %}

{% block content %}
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-1-1">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'Edit terms'|trans({}, "portal") }}</div>
                    </div>
                </div>

                <div>
                    <div class="uk-grid">
                        {# form column #}
                        <div class="uk-width-3-4">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>

                        {# show existing categories #}
                        <div id="categories" class="uk-width-1-4">
                            {% for term in terms %}
                                <span>
                                     <a class="uk-button uk-margin-small-bottom uk-margin-small-right{% if termId == term.id %} uk-button-primary{% endif %}" href="{{ path('commsy_portal_roomtermstemplates', {
                                         'roomId': roomId,
                                         'termId': term.id
                                     }) }}">
                                         <span class="uk-vertical-align-middle">
                                            {{- term.title|trans({},'portal') -}}
                                        </span>
                                    </a>
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}