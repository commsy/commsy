{% extends 'base/room.html.twig' %}
{% form_theme editForm 'form/uikit_horizontal_layout.html.twig' %}
{% import 'utils/macros.html.twig' as macros %}

{% block content %}
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-1-1">
            <div class="uk-panel uk-panel-box uk-panel-box-primary">
                <div class="uk-panel-teaser cs-panel-teaser-primary">
                    <div class="uk-flex uk-flex-middle uk-flex-space-between">
                        <div class="uk-text-large">{{ 'Edit calendars'|trans({}, "calendar") }}</div>
                     </div>
                </div>

                <div>
                    <div class="uk-grid">
                        {# form column #}
                        <div class="uk-width-1-3">
                            {{ form_start(editForm) }}
                            {{ form_widget(editForm) }}
                            {{ form_end(editForm) }}
                        </div>
                        {# show existing calendars #}
                        <div class="uk-width-2-3">
                            {% for calendar in calendars %}
                                <span>
                                     <a class="uk-button uk-margin-small-bottom uk-margin-small-right{% if calendarId == calendar.id %} uk-button-primary{% endif %}" href="{{ path('app_calendar_edit', { 'roomId': roomId, 'calendarId': calendar.id }) }}">
                                        {{ macros.calendarIcon(calendar) }}
                                        <span class="uk-vertical-align-middle">
                                            {{- calendar.title|trans({},'date') -}}
                                        </span>
                                    </a>
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}