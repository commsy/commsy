<?xml version="1.0" encoding="UTF-8" ?>
<!-- main/config/services/legacy.xml -->

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="legacy_kernel" class="LegacyKernel"/>

        <service id="http_kernel.legacy_listener"
            class="Application\HttpKernel\Listener\LegacyListener">
            <argument type="service" id="legacy_kernel"/>
        </service>
    </services>
</container>