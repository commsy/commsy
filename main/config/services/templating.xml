<?xml version="1.0" encoding="UTF-8" ?>
<!-- main/config/services/templating.xml -->

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.class">Symfony\Bridge\Twig\TwigEngine</parameter>
        <parameter key="templating.name_parser.class">Symfony\Component\Templating\TemplateNameParser</parameter>
        <parameter key="templating.locator.class">Symfony\Component\Templating\TemplateNameParser</parameter>
        <parameter key="templating.engine.twig.class">Application\Templating\TwigThemeEngine</parameter>
        <parameter key="twig.loader.filesystem.class">Symfony\Bundle\TwigBundle\Loader\FilesystemLoader</parameter>
    </parameters>

    <services>
        <service id="twig" class="%twig.class%">
            <argument type="service" id="twig.loader" />
            <argument>%twig.options%</argument>
        </service>

        <service id="twig.loader" alias="twig.loader.filesystem"/>

        <service id="templating.name_parser" class="%templating.name_parser.class%"/>

        <service id="templating.locator" class="%templating.locator.class%"/>

        <service id="twig.loader.filesystem" class="%twig.loader.filesystem.class%">
            <argument type="service" id="templating.locator" />
            <argument type="service" id="templating.name_parser" />
            <tag name="twig.loader"/>
        </service>

        <service id="templating" class="%templating.engine.twig.class%">
            <argument type="service" id="twig"/>
            <argument type="service" id="templating.name_parser"/>
        </service>
    </services>
</container>